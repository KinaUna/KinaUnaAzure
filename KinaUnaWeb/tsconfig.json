{
  "compileOnSave": true,
  "compilerOptions": {
    "disableSizeLimit": true,
    "lib": [ "es6", "dom", "es2020" ],
    "module": "ES2020",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "outDir": "wwwroot/js",
    "removeComments": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2020"
  },
  "exclude": [
    "**/node_modules",
    "**.nuget/**/*",
    "wwwroot"
  ],
  "include": [
    "Scripts/**/*"
  ]
}
