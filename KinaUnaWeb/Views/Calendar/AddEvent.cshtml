@using KinaUnaWeb.Services
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using KinaUna.Data
@model KinaUnaWeb.Models.ItemViewModels.CalendarItemViewModel
@section Scripts{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/zebra_datepicker/dist/css/bootstrap/zebra_datepicker.min.css">
    <script src="/lib/moment.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/zebra_datepicker/dist/zebra_datepicker.min.js"></script>
}
@inject ILocaleManager LocaleManager
@{
    ViewData["Title"] = await LocaleManager.GetTranslation("Add event", PageNames.Calendar, Model.LanguageId);
    string addEventForString = await LocaleManager.GetTranslation("Add event for:", PageNames.Calendar, Model.LanguageId);
}
<div class="ml-xl-auto mr-xl-auto col-xxl-11 col-xxxl-10">
    <div class="add-item-container">
        <h2 class="col-12">@ViewData["Title"]</h2>
        <div class="space-20"></div>
        <form asp-action="AddEvent" role="form" method="post">
            @if (Model.ProgenyList.Count > 1)
            {
                <div class="form-group">
                    <label class="control-label col-auto">@addEventForString </label>
                    <div class="col-auto">
                        <select class="selectpicker form-control-noline" data-style="btn-kinaunaselect" data-size="@Model.ProgenyList.Count" asp-for="CalendarItem.ProgenyId" asp-items="@Model.ProgenyList"></select>
                    </div>
                </div>
            }
            else
            {
                <div class="form-group">
                    <label class="control-label col-auto">@addEventForString</label>
                    <div class="col-auto">
                        <input type="text" readonly class="form-control" value="@Model.ProgenyList[0].Text" />
                    </div>
                    <input asp-for="CalendarItem.ProgenyId" value="@Model.ProgenyList[0].Value" type="hidden" />
                </div>
            }
            <div class="form-group">
                <label asp-for="CalendarItem.Title" class="col-auto control-label">@await LocaleManager.GetTranslation("Title", PageNames.Calendar, Model.LanguageId)</label>
                <div class="col-auto">
                    <input asp-for="CalendarItem.Title" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="form-group col-auto">
                    <label asp-for="CalendarItem.StartTime" class="col-auto control-label">@await LocaleManager.GetTranslation("Start", PageNames.Calendar, Model.LanguageId)</label>
                    <div class="col-auto input-group date">
                        <input id="datetimepicker1" data-format="dd-MMM-yyyy HH:mm" type="text" class="form-control" data-zdp_readonly_element="false" asp-for="CalendarItem.StartTime" value="@TimeZoneInfo.ConvertTimeFromUtc(DateTime.UtcNow, TimeZoneInfo.FindSystemTimeZoneById(@Model.CurrentUser.Timezone)).ToString("dd-MMM-yyyy HH:mm")"/>
                    </div>
                </div>
                <script type="text/javascript">
                    $(function () {
                        $('#datetimepicker1').Zebra_DatePicker({
                            format: 'd-M-Y H:i',
                            open_icon_only: true
                        });
                    });
                </script>
                <div class="form-group col-auto">
                    <label asp-for="CalendarItem.EndTime" class="col-auto control-label">@await LocaleManager.GetTranslation("End", PageNames.Calendar, Model.LanguageId)</label>
                    <div class="col-auto input-group date">
                        <input id="datetimepicker2" data-format="dd-MMM-yyyy HH:mm" type="text" class="form-control" data-zdp_readonly_element="false" asp-for="CalendarItem.EndTime" value="@TimeZoneInfo.ConvertTimeFromUtc(DateTime.UtcNow + TimeSpan.FromMinutes(10), TimeZoneInfo.FindSystemTimeZoneById(Model.CurrentUser.Timezone)).ToString("dd-MMM-yyyy HH:mm")"/>
                    </div>
                </div>
                <script type="text/javascript">
                    $(function () {
                        $('#datetimepicker2').Zebra_DatePicker({
                            format: 'd-M-Y H:i',
                            open_icon_only: true
                        });
                    });
                </script>
            </div>
            <div class="form-group">
                <label asp-for="CalendarItem.Notes" class="col-auto control-label">@await LocaleManager.GetTranslation("Notes", PageNames.Calendar, Model.LanguageId)</label>
                <div class="col-auto">
                    <textarea asp-for="CalendarItem.Notes" class="form-control" rows="4"></textarea>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="CalendarItem.Location" class="col-auto control-label">@await LocaleManager.GetTranslation("Location", PageNames.Calendar, Model.LanguageId)</label>
                <div class="col-auto">
                    <input asp-for="CalendarItem.Location" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="CalendarItem.Context" class="col-auto control-label">@await LocaleManager.GetTranslation("Context", PageNames.Calendar, Model.LanguageId)</label>
                <div class="col-auto">
                    <input asp-for="CalendarItem.Context" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="CalendarItem.AllDay" class="col-auto control-label">@await LocaleManager.GetTranslation("All day", PageNames.Calendar, Model.LanguageId)</label>
                <div class="col" style="max-width: 5em;">
                    <input type="checkbox" asp-for="CalendarItem.AllDay" class="form-control" style="width: 3em; height: 3em; accent-color: #73b659;" checked="@Model.CalendarItem.AllDay" value="@Model.CalendarItem.AllDay" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="CalendarItem.AccessLevel" class="col-lg-3 col-sm-3 control-label">@await LocaleManager.GetTranslation("Access level", PageNames.AccessManagement, Model.LanguageId)</label>
                <div class="col-auto">
                    <select class="selectpicker form-control-noline" data-style="btn-kinaunaselect" data-size="@Model.AccessLevelListEn.Count" asp-for="CalendarItem.AccessLevel" asp-items="@Model.AccessLevelListEn"></select>
                </div>
            </div>
            <div>
                <div class="form-group">
                    <div class="col-auto control-label"></div>
                    <div class="col-auto">
                        <button id="submitBtn" class="btn btn-success leavePage" type="submit">@await LocaleManager.GetTranslation("Save", PageNames.AddItem, Model.LanguageId)</button>
                        <a class="btn btn-danger leavePage" asp-controller="Calendar" asp-action="Index">@await LocaleManager.GetTranslation("Cancel", PageNames.AddItem, Model.LanguageId)</a>
                    </div>
                </div>
            </div>
            <div>
                <div class="col-auto control-label"></div>
                <div class="col-auto">
                    <div id="notification" style="color: orangered"></div>
                </div>
            </div>
        </form>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        checkTimes();
        $('#datetimepicker1').change(checkTimes);
        $('#datetimepicker2').change(checkTimes);
    });

    function checkTimes() {
        var sTime = moment($('#datetimepicker1').val(), 'DD-MMM-YYYY HH:mm');
        var eTime = moment($('#datetimepicker2').val(), 'DD-MMM-YYYY HH:mm');
        if (sTime < eTime && sTime.isValid() && eTime.isValid()) {
            $('#notification').text('');
            $('#submitBtn').prop('disabled', false);

        } else {
            $('#submitBtn').prop('disabled', true);
            $('#notification').text('@await LocaleManager.GetTranslation("Warning: Start time is after End time.", PageNames.Calendar, Model.LanguageId)');
        };
    };
</script>