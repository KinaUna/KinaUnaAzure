@using KinaUna.Data
@using KinaUnaWeb.Services
@model KinaUnaWeb.Models.ItemViewModels.KanbanBoardViewModel
@inject ILocaleManager LocaleManager
@{
    ViewData["Title"] = await LocaleManager.GetTranslation("Edit kanban board", PageNames.Todos, Model.LanguageId);
    string assignedToString = await LocaleManager.GetTranslation("Assign kanban board to:", PageNames.Todos, Model.LanguageId);
    
    foreach (SelectListItem accessLevelItem in Model.AccessLevelListEn)
    {
        accessLevelItem.Text = await LocaleManager.GetTranslation(accessLevelItem.Text, PageNames.AccessManagement, Model.LanguageId);
    }

    const int changedItemType = (int)KinaUnaTypes.TimeLineType.KanbanBoard;
}
<div class="timeline-update-data-div d-none" data-changed-item-type="@changedItemType" data-changed-item-item-id="@Model.KanbanBoard.KanbanBoardId"></div>
<div class="ml-auto mr-auto mt-auto mb-auto item-details-content-wrapper">
    <div class="timeline-card-body modal-content item-details-content">
        <div class="row sticky-top m-0 item-details-header">
            <div class="col-12 bg-add-item-header">
                <span class="h4 mr-3 align-bottom">@ViewData["Title"]</span>
                <button type="button" class="btn btn-link item-details-close-button" data-previous-item-type="kanbanboard" data-previous-item-id="@Model.KanbanBoard.KanbanBoardId"><span>×</span></button>
            </div>
        </div>
        <div class="space-20"></div>
        <form id="save-item-form" asp-action="EditKanbanBoard" asp-controller="Kanbans" role="form" method="post">
            @if (Model.ProgenyList.Count > 1)
            {
                <div class="form-group">
                    <label asp-for="KanbanBoard.ProgenyId" class="col-auto control-label" for="item-progeny-id-select">@assignedToString </label>
                    <div class="col-auto">
                        <select id="item-progeny-id-select" class="selectpicker form-control-noline" data-style="btn-kinaunaselect" data-size="@Model.ProgenyList.Count" asp-for="KanbanBoard.ProgenyId" asp-items="@Model.ProgenyList"></select>
                    </div>
                </div>
            }
            else
            {
                <div class="form-group">
                    <label asp-for="KanbanBoard.ProgenyId" class="col-auto control-label">@assignedToString</label>
                    <div class="col-auto">
                        <input type="text" readonly class="form-control" value="@Model.ProgenyList[0].Text" />
                    </div>
                    <input asp-for="KanbanBoard.ProgenyId" value="@Model.ProgenyList[0].Value" type="hidden" />
                </div>
            }
            <div class="form-group">
                <label asp-for="KanbanBoard.Title" class="col-auto control-label">@await LocaleManager.GetTranslation("Title", PageNames.Notes, Model.LanguageId)</label>
                <div class="col-auto">
                    <input id="kanban-board-title-input" asp-for="KanbanBoard.Title" value="@Model.KanbanBoard.Title" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="KanbanBoard.Description" class="col-auto control-label">@await LocaleManager.GetTranslation("Description", PageNames.Todos, Model.LanguageId)</label>
                <div class="col-auto">
                    @{
                        string[] toolbarItems = new[]
                        {
                                        "Bold", "Italic", "Underline", "StrikeThrough",
                                        "FontName", "FontSize", "FontColor", "BackgroundColor",
                                        "LowerCase", "UpperCase", "|",
                                        "Formats", "Alignments", "OrderedList", "UnorderedList",
                                        "Outdent", "Indent", "|",
                                        "CreateLink", "Image", "CreateTable", "|", "ClearFormat",
                                        "SourceCode", "FullScreen", "|", "Undo", "Redo"
                                        };
                    }
                    <ejs-richtexteditor id="description-rich-text-editor" ejs-for="KanbanBoard.Description" height="300px" enableResize="true">
                        <e-richtexteditor-toolbarsettings items="@toolbarItems"></e-richtexteditor-toolbarsettings>
                        <e-richtexteditor-insertimagesettings saveUrl="/AddItem/SaveRtfFile" path=""></e-richtexteditor-insertimagesettings>
                        <e-content-template>

                        </e-content-template>
                    </ejs-richtexteditor>

                </div>
            </div>
            <div class="form-group">
                <label asp-for="KanbanBoard.Context" class="col-auto control-label">@await LocaleManager.GetTranslation("Context", PageNames.Contacts, Model.LanguageId)</label>
                <div class="col-auto">
                    <input id="context-input" asp-for="KanbanBoard.Context" class="form-control" value="@Model.KanbanBoard.Context" placeholder="@await LocaleManager.GetTranslation("Add context...", PageNames.Contacts, Model.LanguageId)" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="KanbanBoard.Tags" class="col-auto control-label">@await LocaleManager.GetTranslation("Tags", PageNames.Contacts, Model.LanguageId)</label>
                <div class="col-auto">
                    <input id="tag-list" type="text" asp-for="KanbanBoard.Tags" value="@Model.KanbanBoard.Tags" placeholder="@await LocaleManager.GetTranslation("Add tag...", PageNames.Contacts, Model.LanguageId)" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="KanbanBoard.AccessLevel" class="col-auto control-label">@await LocaleManager.GetTranslation("Access level", PageNames.AccessManagement, Model.LanguageId)</label>
                <div class="col-auto">
                    <select class="selectpicker form-control-noline" data-style="btn-kinaunaselect" data-size="@Model.AccessLevelListEn.Count" asp-for="KanbanBoard.AccessLevel" asp-items="@Model.AccessLevelListEn"></select>
                </div>
            </div>
            <input asp-for="KanbanBoard.UId" value="@Model.KanbanBoard.UId" type="hidden" />
            <input asp-for="KanbanBoard.KanbanBoardId" value="@Model.KanbanBoard.KanbanBoardId" type="hidden" />
            <div class="space-20"></div>
            <div class="form-group">
                <div class="col-auto control-label"></div>
                <div class="col-auto">
                    <button id="save-kanban-board-button" disabled="disabled" class="btn btn-success" type="submit">@await LocaleManager.GetTranslation("Save", PageNames.AddItem, Model.LanguageId)</button>
                    <a class="btn btn-danger item-details-cancel-button" data-previous-item-type="kanbanboard" data-previous-item-id="@Model.KanbanBoard.KanbanBoardId">@await LocaleManager.GetTranslation("Cancel", PageNames.AddItem, Model.LanguageId)</a>
                </div>
                <div id="validation-errors-div" class="col-auto">
                    <div id="kanban-board-title-required-div" class="d-none text-warning">
                        @await LocaleManager.GetTranslation("Title is required and cannot be blank.", PageNames.Todos, Model.LanguageId)
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<ejs-scripts></ejs-scripts>