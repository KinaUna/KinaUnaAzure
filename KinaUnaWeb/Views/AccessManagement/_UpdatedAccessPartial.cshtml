@using KinaUnaWeb.Services
@using KinaUna.Data
@model KinaUnaWeb.Models.FamilyViewModels.UserAccessViewModel
@inject ILocaleManager LocaleManager
@{
    ViewData["Title"] = await LocaleManager.GetTranslation("User access updated", PageNames.AccessManagement, Model.LanguageId);
    string updateUserForString = await LocaleManager.GetTranslation("User updated for", PageNames.AccessManagement, Model.LanguageId);
    string updateUserString = await LocaleManager.GetTranslation("User email", PageNames.AccessManagement, Model.LanguageId);
}
<div class="ml-auto mr-auto mt-auto mb-auto item-details-content-wrapper">
    <div class="timeline-card-body modal-content item-details-content">
        <div class="add-item-container">
            <div class="row">
                <h2 class="col-12">@ViewData["Title"]</h2>
                <button type="button" class="btn btn-link item-details-close-button"><span>×</span></button>
            </div>
            <div class="space-20"></div>
            <div class="row">
                <div class="col-12">
                    @updateUserForString : @Model.CurrentProgeny.NickName
                </div>
                <div class="col-12">
                    <div class="space-20"></div>
                    @updateUserString : @Model.Email
                </div>

                <div class="col-12">
                    <div class="space-20"></div>
                    @await LocaleManager.GetTranslation("Access level", PageNames.AccessManagement, Model.LanguageId) : @Model.AccessLevelListEn[Model.AccessLevel].Text
                </div>
            </div>
        </div>
    </div>
</div>
