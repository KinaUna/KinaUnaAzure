@using KinaUnaWeb.Services
@using KinaUna.Data
@using KinaUna.Data.Extensions
@model KinaUnaWeb.Models.FamilyViewModels.UserAccessViewModel
@inject ILocaleManager LocaleManager
@{
    string title = await LocaleManager.GetTranslation("Delete user's access to", PageNames.AccessManagement, Model.LanguageId);
}
<div class="ml-auto mr-auto mt-auto mb-auto item-details-content-wrapper">
    <div class="timeline-card-body modal-content item-details-content">
        <div class="row sticky-top m-0 item-details-header">
            <div class="col-12 bg-add-item-header">
                <img src="@Model.CurrentProgeny.GetProfilePictureUrl()" class="item-details-title-picture"/>
                <span class="h4 mr-3 align-bottom">@title @Model.CurrentProgeny.NickName</span>
                <button type="button" class="btn btn-link item-details-close-button"><span>×</span></button>
            </div>
        </div>
        <div class="space-20"></div>
        <form id="save-item-form" asp-action="DeleteAccess" role="form">
            <div class="col-auto">
                @await LocaleManager.GetTranslation("Are you sure you want to remove access for", PageNames.AccessManagement, Model.LanguageId) @Model.UserName ?
            </div>
            <div class="space-20"></div>
            <div class="col-auto">
                @await LocaleManager.GetTranslation("First name", PageNames.AccessManagement, Model.LanguageId): @Model.FirstName
            </div>
            <div class="col-auto">
                @await LocaleManager.GetTranslation("Middle name", PageNames.AccessManagement, Model.LanguageId): @Model.MiddleName
            </div>
            <div col-auto class="col-auto">
                @await LocaleManager.GetTranslation("Last name", PageNames.AccessManagement, Model.LanguageId): @Model.LastName
            </div>
            <div class="col-auto">
                @await LocaleManager.GetTranslation("Email", PageNames.AccessManagement, Model.LanguageId): @Model.Email
            </div>
            <div class="space-20"></div>
            <input asp-for="AccessId" class="form-control" value="@Model.AccessId" type="hidden"/>
            <input asp-for="CurrentProgenyId" class="form-control" value="@Model.CurrentProgenyId" type="hidden"/>
            <div class="col-auto">
                <Button class="btn btn-success">@await LocaleManager.GetTranslation("Yes", PageNames.AccessManagement, Model.LanguageId)</Button>
                <a class="btn btn-danger item-details-cancel-button">@await LocaleManager.GetTranslation("Cancel", PageNames.AccessManagement, Model.LanguageId)</a>
            </div>
        </form>
        <div class="space-20"></div>
    </div>
</div>