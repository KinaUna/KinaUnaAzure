@using KinaUnaWeb.Services
@using KinaUna.Data
@model KinaUnaWeb.Models.FamilyViewModels.UserAccessViewModel
@inject ILocaleManager LocaleManager
@{
    ViewData["Title"] = await LocaleManager.GetTranslation("Delete user's access", PageNames.AccessManagement, Model.LanguageId);
}
<div class="ml-xl-auto mr-xl-auto col-xxl-11 col-xxxl-10">
    <div class="add-item-container">
        <h2 class="col-12">@ViewData["Title"]</h2>
        <div class="space-20"></div>
        <form asp-action="DeleteAccess" role="form">
            <div class="col-auto">
                @await LocaleManager.GetTranslation("Are you sure you want to remove access for", PageNames.AccessManagement, Model.LanguageId) @Model.UserName ?
            </div>
            <div class="col-auto">
                @await LocaleManager.GetTranslation("First name", PageNames.AccessManagement, Model.LanguageId): @Model.FirstName
            </div>
            <div class="col-auto">
                @await LocaleManager.GetTranslation("Middle name", PageNames.AccessManagement, Model.LanguageId): @Model.MiddleName
            </div>
            <div col-auto class="col-auto">
                @await LocaleManager.GetTranslation("Last name", PageNames.AccessManagement, Model.LanguageId): @Model.LastName
            </div>
            <div class="col-auto">
                @await LocaleManager.GetTranslation("Email", PageNames.AccessManagement, Model.LanguageId): @Model.Email
            </div>
            <div class="space-20"></div>
            <input asp-for="AccessId" class="form-control" value="@Model.AccessId" type="hidden"/>
            <input asp-for="CurrentProgenyId" class="form-control" value="@Model.CurrentProgenyId" type="hidden"/>
            <div class="col-auto">
                <Button class="btn btn-success leave-page">@await LocaleManager.GetTranslation("Yes", PageNames.AccessManagement, Model.LanguageId)</Button>
                <a class="btn btn-danger leave-page" asp-controller="AccessManagement" asp-action="Index">@await LocaleManager.GetTranslation("Cancel", PageNames.AccessManagement, Model.LanguageId)</a>
            </div>
        </form>
    </div>
</div>
