@model KinaUnaWeb.Models.ItemViewModels.KanbanItemViewModel;
@using KinaUna.Data
@using KinaUnaWeb.Services
@inject ILocaleManager LocaleManager
@{
    string copyToBoardString = await LocaleManager.GetTranslation("Copy to Kanban board", PageNames.Todos, Model.LanguageId);
}
<div class="ml-auto mr-auto mt-auto mb-auto item-details-content-wrapper">
    <div class="timeline-card-body bg-dark modal-content item-details-content" style="width: fit-content;">
        <div class="row text-white m-0 item-details-header">
            <div class="col-12">
                <div class="space-20">
                </div>
            </div>
            <div class="col-auto">
                <span class="timeline-icon"><i class="material-icons" style="font-size: 48px;">fact_check</i></span>
            </div>
            <div class="col">
                <div class="h4 mr-3 align-bottom">
                    @copyToBoardString
                </div>
            </div>
            <button type="button" class="btn btn-link modal-close-button copy-kanban-item-close-button"><span>×</span></button>
        </div>
        <div class="space-50"></div>
        <div class="row m-0">
            <div class="col-12">
                <div class="row m-0">
                    <div class="col-12">
                        <div class="h5">@Model.KanbanItem.TodoItem.Title</div>
                    </div>
                </div>
            </div>
            <div class="col-12">
                @if (Model.IsCurrentUserProgenyAdmin)
                {
                    <form id="copy-kanban-item-to-kanban-board-form" asp-action="CopyKanbanItemToKanbanBoard" asp-controller="KanbanItems" role="form" method="post">
                        <div class="form-group">
                            <label asp-for="KanbanItem.KanbanBoardId" class="col-auto control-label">@await LocaleManager.GetTranslation("Select board", PageNames.Todos, Model.LanguageId):</label>
                            <div class="col-auto">
                                <select id="copy-kanban-item-to-kanban-board-select" class="selectpicker form-control-noline" data-style="btn-kinaunaselect" data-size="@Model.KanbanBoardsList.Count" asp-for="KanbanItem.KanbanBoardId" asp-items="@Model.KanbanBoardsList"></select>
                            </div>
                        </div>
                        <div class="space-20"></div>
                        <div class="form-group">
                            <div class="col-auto control-label">@await LocaleManager.GetTranslation("Todo reference", PageNames.Todos, Model.LanguageId)</div>
                            <div class="col-auto">
                                <div class="row m-0">
                                    <div class="col-12">
                                        <input id="link-to-current-todo-radio" type="radio" asp-for="TodoItemReference" value="0" checked="checked" class="form-check form-control form-control-inline form-control-radio"/>
                                        <label for="link-to-current-todo-radio" class="control-label">
                                            @await LocaleManager.GetTranslation("Link to current todo", PageNames.Todos, Model.LanguageId)
                                        </label>
                                    </div>
                                </div>
                                <div class="row m-0">
                                    <div class="col-12">
                                        <input id="link-to-new-todo-radio" type="radio" asp-for="TodoItemReference" value="1" class="form-check form-control form-control-inline form-control-radio"/>
                                        <label for="link-to-new-todo-radio" class="control-label">
                                            @await LocaleManager.GetTranslation("Add new todo", PageNames.Todos, Model.LanguageId)
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="space-20"></div>
                        <div class="form-group">
                            <input type="hidden" asp-for="KanbanItem.KanbanItemId" value="@Model.KanbanItem.KanbanItemId"/>
                            <div class="col">
                                <button id="copy-kanban-item-to-kanban-board-button" type="submit" class="btn btn-success" data-kanban-item-id="@Model.KanbanItem.KanbanItemId">@copyToBoardString</button>
                                <button type="button" class="btn btn-danger copy-kanban-item-cancel-button">@await LocaleManager.GetTranslation("Cancel", PageNames.AddItem, Model.LanguageId)</button>
                            </div>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</div>
