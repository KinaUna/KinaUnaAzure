@using KinaUnaWeb.Services
@using KinaUna.Data
@inject ILocaleManager LocaleManager
@{
    int languageId = LocaleManager.GetLanguageId(Context.Request);
}
<div id="latestPostsParentDiv" class="d-none">
    <div>
        @await LocaleManager.GetTranslation("Latest posts:", PageNames.Home, languageId)
    </div>
    <div id="timelineItemsDiv" style="opacity: 0.75">

    </div>
    <div style="height: 150px;">
        <button id="moreTimelineItemsButton" class="btn btn-link btn-link-edit d-none" style="margin-top: 20px;">@await LocaleManager.GetTranslation("Show more posts", PageNames.Timeline, languageId)</button>
        <div id="loadingTimeLineItemsDiv" class="w-100">
            <div class="space-20"></div>
        </div>
    </div>
</div>


<script src="/js/home/home-latest-posts.js" type="module"></script>