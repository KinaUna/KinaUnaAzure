@using KinaUnaWeb.Services
@using KinaUna.Data
@model KinaUnaWeb.Models.HomeViewModels.HomeFeedViewModel
@inject ILocaleManager LocaleManager
@{
    ViewData["Title"] = await LocaleManager.GetTranslation("Home", PageNames.Home, Model.LanguageId);
    string isNowString = await LocaleManager.GetTranslation("is now", PageNames.Home, Model.LanguageId);
    string willBeString = await LocaleManager.GetTranslation("will be", PageNames.Home, Model.LanguageId);
    string wasString = await LocaleManager.GetTranslation("was", PageNames.Home, Model.LanguageId);
    string minutesOldString = await LocaleManager.GetTranslation("minutes old.", PageNames.Home, Model.LanguageId);
    string hoursOldString = await LocaleManager.GetTranslation("hours old.", PageNames.Home, Model.LanguageId);
    string daysOldString = await LocaleManager.GetTranslation("days old.", PageNames.Home, Model.LanguageId);
    string monthsOldString = await LocaleManager.GetTranslation("months old.", PageNames.Home, Model.LanguageId);
    string yearsOldString = await LocaleManager.GetTranslation("years old.", PageNames.Home, Model.LanguageId);
    string daysString = await LocaleManager.GetTranslation("days", PageNames.Home, Model.LanguageId);
    string weeksString = await LocaleManager.GetTranslation("weeks", PageNames.Home, Model.LanguageId);
    string hoursString = await LocaleManager.GetTranslation("hours", PageNames.Home, Model.LanguageId);
    string minutesString = await LocaleManager.GetTranslation("minutes", PageNames.Home, Model.LanguageId);
    string weeksAndString = await LocaleManager.GetTranslation("weeks and", PageNames.Home, Model.LanguageId);
}
<div class="container">
    <div class="row">
        <div class="col-12 col-md-8" style="margin-bottom: 10px; float: left; padding-left: 25px;">
            <H4>
                <img src="~/images/KinaUnaLogo_246x80.png" />
            </H4>
            <br />
            <div class="row">
                <div style="margin-left: 10px;">
                    @if (User.Identity != null && User.Identity.IsAuthenticated && ViewBag.OriginalProgeny != null)
                    {
                        <div>@await LocaleManager.GetTranslation("You don't have access to data for", PageNames.Home, Model.LanguageId) @ViewBag.OriginalProgeny.NickName<br />
                            
                            @await LocaleManager.GetTranslation("To request access click here:", PageNames.Home, Model.LanguageId)  <a asp-controller="Home" asp-action="RequestAccess" asp-route-childId="@ViewBag.OriginalProgeny.Id" class="btn btn-success btn-round leavePage">
                                <i class="fas fa-plus"></i> @await LocaleManager.GetTranslation("Request access", PageNames.Home, Model.LanguageId)
                            </a><br />
                            @await LocaleManager.GetTranslation("Displaying data for KinaUna.com instead.", PageNames.Home, Model.LanguageId)<br/>
                        </div>
                    }
                    <div style="font-size: 16px;">
                        <div>@Model.CurrentProgeny.NickName @isNowString @Model.Years @await LocaleManager.GetTranslation("years old.", PageNames.Home, Model.LanguageId)</div>
                        <div>@Model.CurrentProgeny.NickName @isNowString @Model.Months @await LocaleManager.GetTranslation("months old.", PageNames.Home, Model.LanguageId)</div>
                        <div>@Model.CurrentProgeny.NickName @isNowString @Model.Weeks[0] @weeksAndString @Model.Weeks[1] @daysOldString</div>
                        <div>@Model.CurrentProgeny.NickName @isNowString @Model.Days @daysOldString</div>
                        <div>@Model.CurrentProgeny.NickName @isNowString @Model.Hours @await LocaleManager.GetTranslation("hours old.", PageNames.Home, Model.LanguageId)</div>
                        <div>@Model.CurrentProgeny.NickName @isNowString @Model.Minutes @await LocaleManager.GetTranslation("minutes old.", PageNames.Home, Model.LanguageId)</div>
                        <br/>
                        <div>@Model.CurrentProgeny.NickName @await LocaleManager.GetTranslation("will have the next birthday in", PageNames.Home, Model.LanguageId)@Model.NextBirthday @daysString.</div>
                    </div>
                    <br/>
                    <div style="font-size: 16px;">
                        <div>@Model.CurrentProgeny.NickName @willBeString @Model.WeeksMileStone[0] @weeksString: @Model.WeeksMileStone[1]</div>
                        <div>@Model.CurrentProgeny.NickName @willBeString @Model.DaysMileStone[0] @daysString: @Model.DaysMileStone[1]</div>
                        <div>@Model.CurrentProgeny.NickName @willBeString @Model.HoursMileStone[0] @hoursString: @Model.HoursMileStone[1]</div>
                        <div>@Model.CurrentProgeny.NickName @willBeString @Model.MinutesMileStone[0] @minutesString: @Model.MinutesMileStone[1]</div>
                    </div>
                    <br/><br/>
                    <div>
                        <a asp-controller="Pictures" asp-action="Picture" asp-route-id="@Model.ImageId" asp-route-childId="@Model.CurrentProgeny.Id" class="leavePage" aria-label="View Image">
                            <img src="@Model.ImageLink600" style="width: 100%; max-width: 100%"/>
                        </a>

                    </div>
                    @if (!string.IsNullOrEmpty(Model.Tags))
                    {
                        <div>
                            @{
                                List<string> tagsList = Model.Tags.Split(',').ToList();
                                foreach (string tagString in tagsList)
                                {
                                    <a asp-controller="Pictures" asp-action="Index" asp-route-id="1" asp-route-tagFilter="@tagString" class="badge badge-pill badge-rose leavePage">@tagString</a>
                                }
                            }
                        </div>

                    }
                    @if (!string.IsNullOrEmpty(Model.Location))
                    {
                        <br/><div>@await LocaleManager.GetTranslation("Photo location:", PageNames.Home, Model.LanguageId) @Model.Location</div><br/>
                    }
                    @if (Model.PicTimeValid)
                    {
                        <div style="font-size: 16px;">

                            <div>@await LocaleManager.GetTranslation("Photo taken:", PageNames.Home, Model.LanguageId) @Model.PicTime</div>
                            <div>@Model.CurrentProgeny.NickName @wasString @Model.PicYears @yearsOldString</div>
                            <div>@Model.CurrentProgeny.NickName @wasString @Model.PicMonths @monthsOldString</div>
                            <div>@Model.CurrentProgeny.NickName @wasString @Model.PicWeeks[0] @weeksAndString @Model.PicWeeks[1] @daysOldString</div>
                            <div>@Model.CurrentProgeny.NickName @wasString @Model.PicDays @daysOldString</div>
                            <div>@Model.CurrentProgeny.NickName @wasString @Model.PicHours @hoursOldString</div>
                            <div>@Model.CurrentProgeny.NickName @wasString @Model.PicMinutes @minutesOldString</div>
                        </div>

                    }
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-12 col-md-12 col-lg-4" style="float: right; margin-top: 10px; padding-left: 25px;">
            @if (Model.EventsList.Any())
            {
            <div>
                Current and upcoming events:
            </div>
                await Html.RenderPartialAsync("EventsPartial", Model.EventsList);
            <br />
            }
            @if (Model.LatestPosts.TimeLineItems.Any())
            {
            <div>
                Latest posts:
            </div>
                await Html.RenderPartialAsync("LatestPostsPartial", Model.LatestPosts);
            <br />
            }
            @if (Model.YearAgoPosts.TimeLineItems.Any())
            {
            <div>
                On this day a year ago:
            </div>
                await Html.RenderPartialAsync("YearAgoPartial", Model.YearAgoPosts);
            }
        </div>
    </div>
</div>
<br />