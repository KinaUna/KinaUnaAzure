@using KinaUnaWeb.Services
@using KinaUna.Data
@model KinaUnaWeb.Models.ItemViewModels.UploadVideoViewModel
@inject ILocaleManager LocaleManager
@{
    ViewData["Title"] = await LocaleManager.GetTranslation("Upload video", PageNames.Videos, Model.LanguageId);
}
<div class="ml-xl-auto mr-xl-auto col-xxl-11 col-xxxl-10">
    <div class="add-item-container">
        <h2 class="col-12">@ViewData["Title"]</h2>
        <div class="space-20"></div>
        <div class="col-auto" style="margin: 20px;">
            <H4>@await LocaleManager.GetTranslation("The video has been uploaded", PageNames.Videos, Model.LanguageId)</H4>
            <div><img width="100%" src="@Model.Video.ThumbLink" /></div>
        </div>
        <div class="space-20"></div>
        <div class="col-auto">
            <a class="leavePage" asp-controller="Videos" asp-action="AddVideo">@await LocaleManager.GetTranslation("Return to upload video", PageNames.Videos, Model.LanguageId)</a>
        </div>
        <div class="space-20"></div>
        <div class="col-auto">
            <a class="leavePage" asp-controller="Videos" asp-action="Index" asp-route-childId="@Model.Video.ProgenyId">@await LocaleManager.GetTranslation("Return to video gallery", PageNames.Videos, Model.LanguageId)</a>
        </div>
    </div>
</div>