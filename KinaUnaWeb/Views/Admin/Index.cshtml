@using KinaUnaWeb.Services
@inject ILocaleManager LocaleManager
@{
    ViewData["Title"] = "Administration";
    _ = await LocaleManager.GetPageTextByTitle("__RegisterTerms", "Register", 1);
}
<div class="ml-xl-auto mr-xl-auto col-xl-11 col-xxl-10">
    <div class="add-item-container">
        <h2>@ViewData["Title"]</h2>
        <div class="space-20"></div>
        <div>Manage translations: <a asp-action="ManageTranslations">Manage translations</a></div>
        <div class="space-20"></div>
        <div>Manage texts: <a asp-action="ManageTexts">Manage texts</a></div>
        <div class="space-20"></div>
        <div>Manage languages: <a asp-action="ManageLanguages">Manage languages</a></div>
        <div class="space-20"></div>
        <div>Send admin message: <a asp-action="SendAdminMessage">Compose Message</a></div>
        <div class="space-20"></div>
        <div>Send push notification: <a asp-action="SendPush">Compose Push Notification</a></div>
        <div class="space-20"></div>
        <div>Manage scheduled tasks: <a asp-action="ScheduledTasks">Manage Tasks</a></div>
        <div class="space-20"></div>
        <button type="button" class="btn btn-warning" onclick="removeServiceWorkers()">Remove Service Workers</button>
    </div>
</div>