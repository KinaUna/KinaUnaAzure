@model KinaUnaLanguage
@{
    ViewData["Title"] = "KinaUna Languages - Delete Language";
}
<div class="space-20"></div>
<div class="row">
    <div class="col-10">
        <div class="space-20"></div>
        <h2>@ViewData["Title"]</h2>
        <div class="space-20"></div>
        <form asp-action="DeleteLanguage" role="form" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="languageNameInput">Language name</label>
                <input type="text" id="languageNameInput" class="form-control" placeholder="Language name" asp-for="Name" value="@Model.Name" readonly="readonly"/>
            </div>
            <div class="space-20"></div>
            <div class="form-group">
                <label for="codeInput">Language name</label>
                <input type="text" id="codeInput" class="form-control" placeholder="Language code" asp-for="Code" value="@Model.Code" readonly="readonly"/>
            </div>
            <div class="space-20"></div>
            <div class="form-group">
                <label for="iconInput">Icon</label>
                <input type="text" id="iconInput" class="form-control" placeholder="Icon" asp-for="Icon" value="@Model.Icon" readonly="readonly"/>
            </div>
            <div class="space-50"></div>
            <div class="horizontal_bar_thin w-100"></div>
            <div class="space-50"></div>
            <div class="row">
                <div class="col-12">
                    <input hidden="hidden" asp-for="Id" value="@Model.Id"/>
                    <button id="submitButton" class="btn btn-info leavePage" type="submit">Delete</button>
                    <a class="btn btn-warning leavePage" asp-controller="Admin" asp-action="ManageLanguages">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>
