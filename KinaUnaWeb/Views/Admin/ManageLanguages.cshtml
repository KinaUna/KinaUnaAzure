@model List<KinaUnaLanguage>
@{
    ViewData["Title"] = "Manage Languages";
}
@{

    List<object> toolbarItems = new List<object>();
    toolbarItems.Add(new { text = "Add Language", tooltipText = "Add a new language", prefixIcon = "e-expand", id = "addlanguage" });

}
<div class="pivoq_space20"></div>
<div class="pivoq_section ">
    <div class="container">
        <div class="pivoq_space20"></div>
        <h2>@ViewData["Title"]</h2>
        <div class="pivoq_space20"></div>
        <style type="text/css" class="cssStyles">
            .languageicon {
                height: 32px;
                box-shadow: inset 0 0 1px #e0e0e0, inset 0 0 4px #000000;
                box-shadow: inset 0 0 1px #e0e0e0, inset 0 0 4px rgba(0, 0, 0, 0.2);
                object-fit: cover;
            }
        </style>
        <script id="rowtemplate" type="text/x-template">
            <tr>
                <td style="border-bottom: 1px solid #ddd;" align="center"><img class="languageicon" src="${IconLink}" alt="${Name}" /></td>
                <td style="border-bottom: 1px solid #ddd;" align="center">${Id}</td>
                <td style="border-bottom: 1px solid #ddd;" align="center">${Name}</td>
                <td style="border-bottom: 1px solid #ddd;" align="center">${Code}</td>
                <td style="border-bottom: 1px solid #ddd;" align="center">${Icon}</td>
                <td style="border-bottom: 1px solid #ddd;" align="center">
                    <div><a href="/Admin/EditLanguage?languageId=${Id}">Edit</a></div>
                    <div><a href="/Admin/DeleteLanguage?languageId=${Id}">Delete</a></div>
                </td>
            </tr>
        </script>
        <div>
            <ejs-grid id="Grid" dataSource="@Model" toolbarClick="toolbarClick" toolbar=toolbarItems allowPaging="true" rowTemplate="#rowtemplate" width="auto">
                <e-grid-pagesettings pageCount="10"></e-grid-pagesettings>
                <e-grid-columns>
                    <e-grid-column field="IconLink" headerText="Icon image" textAlign="Center" headerTextAlign="Center" width="70"></e-grid-column>
                    <e-grid-column field="Id" headerText="Language ID" textAlign="Center" headerTextAlign="Center" width="80"></e-grid-column>
                    <e-grid-column field="Name" headerText="Name" textAlign="Center" headerTextAlign="Center" width="150"></e-grid-column>
                    <e-grid-column field="Code" headerText="Code" textAlign="Center" headerTextAlign="Center" width="120"></e-grid-column>
                    <e-grid-column field="Icon" headerText="Icon" textAlign="Center" headerTextAlign="Center" width="80"></e-grid-column>
                    <e-grid-column headerText="Action" width="100" textAlign="Center" headerTextAlign="Center"></e-grid-column>
                </e-grid-columns>
            </ejs-grid>
        </div>
    </div>
</div>
<script>
    function toolbarClick(args) {
        if (args.item.id === 'addlanguage') {
            window.location.href = '/Admin/AddLanguage';
        }
    }
</script>