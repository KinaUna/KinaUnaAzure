@using KinaUna.Data
@model WebNotification
@{
    ViewData["Title"] = "Send admin message";
}
<div class="ml-xl-auto mr-xl-auto col-xxl-11 col-xxxl-10">
<div class="space-20"></div>
    <div class="add-item-container">
        <h2>@ViewData["Title"]</h2>
        <form asp-action="SendAdminMessage" role="form" method="post">
            <div class="form-group">
                <label asp-for="From" class="col-3 col-lg-2">From</label>
                <div class="col-auto">
                    <input asp-for="From" class="form-control" value="@Constants.AppName!"/>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Icon" class="col-3 col-lg-2">Icon</label>
                <div class="col-auto">
                    <input asp-for="Icon" class="form-control" value="/images/kinaunalogo48x48.png"/>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="To" class="col-3 col-lg-2">To</label>
                <div class="col-auto">
                    <input asp-for="To" class="form-control" value="OnlineUsers"/>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="col-3 col-lg-2">Title</label>
                <div class="col-auto">
                    <input asp-for="Title" class="form-control"/>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Message" class="col-3 col-lg-2">Message</label>
                <div class="col-auto">
                    <textarea asp-for="Message" class="form-control" rows="4"></textarea>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="col-3 col-lg-2">Type</label>
                <div class="col-auto">
                    <input asp-for="Type" class="form-control" value="Notification"/>
                </div>
            </div>
            <div>
                <div class="form-group">
                    <div class="col-3 col-lg-2"></div>
                    <div class="col-auto">
                        <button class="btn btn-success" type="submit">Send</button>
                        <a class="btn btn-danger" asp-controller="Admin" asp-action="Index">Cancel</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>