@using KinaUnaWeb.Models.HomeViewModels
@using KinaUnaWeb.Services
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model TextTranslation
@{
    ViewData["Title"] = "KinaUna Translations - Delete Translation";
}
@inject ILocaleManager LocaleManager;
@{
    SetLanguageIdViewModel langModel = await LocaleManager.GetLanguageModel(Model.LanguageId);
    KinaUnaLanguage language = langModel.LanguageList.SingleOrDefault(l => l.Id == Model.LanguageId);
}
<div class="ml-xl-auto mr-xl-auto col-xxl-11 col-xxxl-10">
    <div class="add-item-container">
        <h2 class="col-12">@ViewData["Title"]</h2>
        <div class="space-20"></div>
        <div class="col-auto">
            <h4>Are you sure you want to delete this translation key and all translations?</h4>
        </div>
        <form asp-action="DeleteTranslation" role="form" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <div class="row m-0">
                    <div class="col-3 text-end">
                        Language:
                    </div>
                    <div class="col-auto">
                        @if (language != null)
                        {
                            @language.Name
                        }
                    </div>
                </div>
            </div>
            <div class="space-20"></div>
            <div class="form-group">
                <div class="row m-0">
                    <div class="col-3 text-end">Key:</div>
                    <div class="col-auto">@Model.Word</div>
                </div>
            </div>
            <div class="space-20"></div>
            <div class="form-group">
                <div class="row m-0">
                    <div class="col-3 text-end">Page:</div>
                    <div class="col-9"> @Model.Page</div>
                </div>
            </div>
            <div class="space-20"></div>
            <div class="form-group">
                <div class="row m-0">
                    <div class="col-3 text-end">Translation:</div>
                    <div class="col-9">@Model.Translation</div>
                </div>
            </div>
            <div class="space-50"></div>
            <div class="horizontal_bar_thin w-100"></div>
            <div class="space-50"></div>
            <div class="form-group">
                <div class="col-12">
                    <input hidden="hidden" type="number" value="@Model.Id" asp-for="Id" />
                    <input hidden="hidden" type="number" value="@Model.LanguageId" asp-for="LanguageId" />
                    <button id="submitButton" class="btn btn-info float-right leavePage" type="submit">Delete</button>
                    <a class="btn btn-warning leavePage" asp-controller="Admin" asp-action="ManageTranslations">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>
