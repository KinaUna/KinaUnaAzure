@using KinaUna.Data
@model PushNotification
<h4>Send Push Message</h4>
<form asp-action="SendPush" role="form" method="post">
    <div class="form-group">
        <label asp-for="UserId" class="col-lg-3 col-sm-3 control-label">User Id</label>
        <div class="col-lg-6">
            <input asp-for="UserId" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Title" class="col-lg-3 col-sm-3 control-label">Title</label>
        <div class="col-lg-6">
            <input asp-for="Title" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Message" class="col-lg-3 col-sm-3 control-label">Message</label>
        <div class="col-lg-6">
            <textarea asp-for="Message" class="form-control" rows="4"></textarea>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Link" class="col-lg-3 col-sm-3 control-label">Link</label>
        <div class="col-lg-6">
            <input asp-for="Link" class="form-control" value="@Constants.WebAppUrl" />
        </div>
    </div>
    <div>
        <div class="form-group">
            <div class="col-lg-3 col-sm-3 control-label"></div>
            <div class="col-lg-9">
                <button class="btn btn-success" type="submit">Send</button>
                <a class="btn btn-danger" asp-controller="Admin" asp-action="Index">Cancel</a>
            </div>
        </div>
    </div>
</form>