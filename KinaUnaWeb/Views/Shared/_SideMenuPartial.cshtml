                        <button type="submit" class="btn-sidebar leavePage">
                            <i class="material-icons sidebar-icon">home</i>
                            <span class="sidebar-item-text sidebar-item-text-hide">
                                @await LocaleManager.GetTranslation("Home", PageNames.Layout, Model.LanguageId)
                            </span>
                        </button>
                    </form>
                </li>
