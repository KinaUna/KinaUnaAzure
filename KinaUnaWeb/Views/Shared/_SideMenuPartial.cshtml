@using KinaUnaWeb.Services
@using KinaUna.Data
@model KinaUnaWeb.Models.HomeViewModels.UserMenuViewModel
@inject ILocaleManager LocaleManager

<div id="sidebar-menu-div" class="sidebar-menu">
    <div id="sidebarTogglerDiv" class="sidebar-toggler">
        <button class="btn-sidebar btn-link-yellow" onclick="toggleSideBar()">
            <i class="material-icons sidebar-icon">apps</i>
        </button>
    </div>
