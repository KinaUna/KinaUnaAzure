@using KinaUnaWeb.Services
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using KinaUna.Data
@inject ILocaleManager LocaleManager
@{
    int languageId = LocaleManager.GetLanguageId(Context.Request);
    string titleString = await LocaleManager.GetTranslation("Add item", PageNames.AddItem, languageId);
}
<div class="modal fade" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false" id="mainModal">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">
                    @titleString
                </h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4">
                    <div class="col">
                        <a asp-controller="Notes" asp-action="AddNote" class="btn btn-add-note leavePage">
                            <div class="space-20"></div>
                            <i class="material-icons" style="font-size: 42px;">note</i>
                            <div class="space-20"></div>
                            @await LocaleManager.GetTranslation("Note", PageNames.AddItem, languageId)
                        </a>
                    </div>
                    <div class="col">
                        <a asp-controller="Calendar" asp-action="AddEvent" class="btn btn-add-calendar leavePage">
                            <div class="space-20"></div>
                            <i class="material-icons" style="font-size: 42px;">event_note</i>
                            <div class="space-20"></div>
                            @await LocaleManager.GetTranslation("Calendar item", PageNames.AddItem, languageId)
                        </a>
                    </div>
                    <div class="col">
                        <a asp-controller="Sleep" asp-action="AddSleep" class="btn btn-add-sleep leavePage">
                            <div class="space-20"></div>
                            <i class="material-icons" style="font-size: 42px;">hotel</i>
                            <div class="space-20"></div>
                            @await LocaleManager.GetTranslation("Sleep", PageNames.AddItem, languageId)
                        </a>
                    </div>
                    <div class="col">
                        <a asp-controller="Pictures" asp-action="AddPicture" class="btn btn-add-photo leavePage">
                            <div class="space-20"></div>
                            <i class="material-icons" style="font-size: 42px;">photo_library</i>
                            <div class="space-20"></div>
                            @await LocaleManager.GetTranslation("Photo", PageNames.AddItem, languageId)
                        </a>
                    </div>
                    <div class="col">
                        <a asp-controller="Videos" asp-action="AddVideo" class="btn btn-add-video leavePage">
                            <div class="space-20"></div>
                            <i class="material-icons" style="font-size: 42px;">videocam</i>
                            <div class="space-20"></div>
                            @await LocaleManager.GetTranslation("Video", PageNames.AddItem, languageId)
                        </a>
                    </div>
                    <div class="col">
                        <a asp-controller="Vocabulary" asp-action="AddVocabulary" class="btn btn-add-word leavePage">
                            <div class="space-20"></div>
                            <i class="material-icons" style="font-size: 42px;">forum</i>
                            <div class="space-20"></div>
                            @await LocaleManager.GetTranslation("Word", PageNames.AddItem, languageId)
                        </a>
                    </div>
                    <div class="col">
                        <a asp-controller="Friends" asp-action="AddFriend" class="btn btn-add-friend leavePage">
                            <div class="space-20"></div>
                            <i class="material-icons" style="font-size: 42px;">face</i>
                            <div class="space-20"></div>
                            @await LocaleManager.GetTranslation("Friend", PageNames.AddItem, languageId)
                        </a>
                    </div>
                    <div class="col">
                        <a asp-controller="Measurements" asp-action="AddMeasurement" class="btn btn-add-measurement leavePage">
                            <div class="space-20"></div>
                            <i class="material-icons" style="font-size: 42px;">straighten</i>
                            <div class="space-20"></div>
                            @await LocaleManager.GetTranslation("Measurement", PageNames.AddItem, languageId)
                        </a>
                    </div>
                    <div class="col">
                        <a asp-controller="Contacts" asp-action="AddContact" class="btn btn-add-contact leavePage">
                            <div class="space-20"></div>
                            <i class="material-icons" style="font-size: 42px;">contact_phone</i>
                            <div class="space-20"></div>
                            @await LocaleManager.GetTranslation("Contact", PageNames.AddItem, languageId)
                        </a>
                    </div>
                    <div class="col">
                        <a asp-controller="Vaccinations" asp-action="AddVaccination" class="btn btn-add-vaccination leavePage">
                            <div class="space-20"></div>
                            <i class="material-icons" style="font-size: 42px;">local_pharmacy</i>
                            <div class="space-20"></div>
                            @await LocaleManager.GetTranslation("Vaccination", PageNames.AddItem, languageId)
                        </a>
                    </div>
                    <div class="col">
                        <a asp-controller="Locations" asp-action="AddLocation" class="btn btn-add-location leavePage">
                            <div class="space-20"></div>
                            <i class="material-icons" style="font-size: 42px;">person_pin</i>
                            <div class="space-20"></div>
                            @await LocaleManager.GetTranslation("Location", PageNames.AddItem, languageId)
                        </a>
                    </div>
                    <div class="col">
                        <a asp-controller="AccessManagement" asp-action="AddAccess" asp-route-progenyId="0" class="btn btn-add-user leavePage">
                            <div class="space-20"></div>
                            <i class="material-icons" style="font-size: 42px;">person</i>
                            <div class="space-20"></div>
                            @await LocaleManager.GetTranslation("User", PageNames.AddItem, languageId)
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>