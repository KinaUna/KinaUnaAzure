                        </a>
                    </div>
                    <div class="col">
                        <a class="btn btn-add-sleep add-item-button" data-add-item-type="sleep" data-add-item-progeny-id="0">
                            <div class="space-20"></div>
                            <i class="material-icons" style="font-size: 42px;">hotel</i>
                            <div class="space-20"></div>
                            @await LocaleManager.GetTranslation("Sleep", PageNames.AddItem, languageId)
                        </a>
                    </div>
                    <div class="col">
                        <a class="btn btn-add-user add-item-button" data-add-item-type="user" data-add-item-progeny-id="0">
                            <div class="space-20"></div>
                            <i class="material-icons" style="font-size: 42px;">person</i>
                            <div class="space-20"></div>
                            @await LocaleManager.GetTranslation("User", PageNames.AddItem, languageId)
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>