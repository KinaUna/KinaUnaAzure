@using KinaUnaWeb.Services
@using KinaUna.Data
@model KinaUnaWeb.Models.ItemViewModels.VaccinationViewModel
@inject ILocaleManager LocaleManager
@{
    ViewData["Title"] = await LocaleManager.GetTranslation("Delete vaccination", PageNames.Vaccinations, Model.LanguageId);
}
<div class="ml-xl-auto mr-xl-auto col-xxl-11 col-xxxl-10">
    <div class="add-item-container">
        <h2 class="col-12">@ViewData["Title"]</h2>
        <div class="space-20"></div>
        <form asp-action="DeleteVaccination" role="form" method="post">
            <div class="col-auto">
                @await LocaleManager.GetTranslation("Are you sure you want to delete this vaccination?", PageNames.Vaccinations, Model.LanguageId) @Model.VaccinationItem.VaccinationName
            </div>
            <div class="space-20"></div>
            <div class="col-auto">
                @await LocaleManager.GetTranslation("Description:", PageNames.Vaccinations, Model.LanguageId) @Model.VaccinationItem.VaccinationDescription
            </div>
            <div class="space-20"></div>
            <div class="col-auto">
                @await LocaleManager.GetTranslation("Notes:", PageNames.Vaccinations, Model.LanguageId) @Model.VaccinationItem.Notes
            </div>
            <div class="space-20"></div>
            <div class="col-auto">
                @await LocaleManager.GetTranslation("Date:", PageNames.Vaccinations, Model.LanguageId) @Model.VaccinationItem.VaccinationDate.ToString("dd-MMM-yyyy")
            </div>
            <div class="space-20"></div>
            <input asp-for="VaccinationItem.VaccinationId" class="form-control" value="@Model.VaccinationItem.VaccinationId" type="hidden" />
            <div class="col-auto">
                <Button type="submit" class="btn btn-success leavePage">@await LocaleManager.GetTranslation("Yes - delete this vaccination", PageNames.Vaccinations, Model.LanguageId)</Button>
                <a class="btn btn-danger leavePage" asp-controller="Vaccinations" asp-action="Index">@await LocaleManager.GetTranslation("Cancel:", PageNames.AddItem, Model.LanguageId)</a>
            </div>
        </form>
    </div>
</div>