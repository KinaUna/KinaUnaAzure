@using KinaUnaWeb.Services
@using KinaUna.Data
@model KinaUnaWeb.Models.ItemViewModels.VaccinationViewModel
@inject ILocaleManager LocaleManager
@{
    ViewData["Title"] = await LocaleManager.GetTranslation("Delete vaccination", PageNames.Vaccinations, Model.LanguageId);
}
<h2>@ViewData["Title"] - @Model.Vaccination.VaccinationName (@Model.Vaccination.VaccinationDate)</h2>
<H4>Delete Vaccination </H4>
<form asp-action="DeleteVaccination" role="form" method="post">
    <div>
        @await LocaleManager.GetTranslation("Are you sure you want to delete this vaccination?", PageNames.Vaccinations, Model.LanguageId) @Model.Vaccination.VaccinationName
    </div>
    <br/>
    <div>@await LocaleManager.GetTranslation("Description:", PageNames.Vaccinations, Model.LanguageId) @Model.Vaccination.VaccinationDescription</div>
    <br/>
    <div>
        @await LocaleManager.GetTranslation("Notes:", PageNames.Vaccinations, Model.LanguageId) @Model.Vaccination.Notes
    </div>
    <br/>
    <div>@await LocaleManager.GetTranslation("Date:", PageNames.Vaccinations, Model.LanguageId) @Model.Vaccination.VaccinationDate.ToString("dd-MMM-yyyy")</div>
    <br />
    <input asp-for="Vaccination.VaccinationId" class="form-control" value="@Model.Vaccination.VaccinationId" type="hidden" />
    <div>
        <Button type="submit" class="btn btn-success leavePage">@await LocaleManager.GetTranslation("Yes - delete this vaccination", PageNames.Vaccinations, Model.LanguageId)</Button>
        <a class="btn btn-danger leavePage" asp-controller="Vaccinations" asp-action="Index">@await LocaleManager.GetTranslation("Cancel:", PageNames.AddItem, Model.LanguageId)</a>
    </div>
</form>