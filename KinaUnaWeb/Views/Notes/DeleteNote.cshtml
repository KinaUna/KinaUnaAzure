@using Microsoft.AspNetCore.Mvc.TagHelpers
@using KinaUnaWeb.Services
@using KinaUna.Data
@model KinaUnaWeb.Models.ItemViewModels.NoteViewModel
@inject ILocaleManager LocaleManager
@{
    ViewData["Title"] = await LocaleManager.GetTranslation("Delete note", PageNames.Notes, Model.LanguageId);
}
<div class="ml-xl-auto mr-xl-auto col-xl-10 col-xxl-9">
    <h2>@ViewData["Title"] - @Model.NoteItem.Title</h2>
    <form asp-action="DeleteNote" role="form" method="post">
        <div>
            @await LocaleManager.GetTranslation("Are you sure you want to delete this note?", PageNames.Notes, Model.LanguageId) @Model.NoteItem.Title
        </div>
        <br />
        <div>
            @await LocaleManager.GetTranslation("Content:", PageNames.Notes, Model.LanguageId) @Html.Raw(Model.NoteItem.Content)
        </div>
        <br />
        <input asp-for="NoteItem.NoteId" class="form-control" value="@Model.NoteItem.NoteId" type="hidden" />
        <div>
            <Button type="submit" class="btn btn-success leavePage">@await LocaleManager.GetTranslation("Yes - delete this note", PageNames.Notes, Model.LanguageId)</Button>
            <a class="btn btn-danger leavePage" asp-controller="Notes" asp-action="Index">@await LocaleManager.GetTranslation("Cancel", PageNames.AddItem, Model.LanguageId)</a>
        </div>
    </form>
</div>