@using KinaUnaWeb.Services
@using KinaUna.Data
@model KinaUnaWeb.Models.ItemViewModels.MeasurementViewModel
@inject ILocaleManager LocaleManager
@{
    ViewData["Title"] = await LocaleManager.GetTranslation("Delete measurement", PageNames.Measurements, Model.LanguageId);
}
<div class="ml-xl-auto mr-xl-auto col-xxl-11 col-xxxl-10">
    <div class="add-item-container">
        <h2 class="col-12">@ViewData["Title"]</h2>
        <div class="space-20"></div>
        <form asp-action="DeleteMeasurement" role="form" method="post">
            <div class="col-auto">
                @await LocaleManager.GetTranslation("Are you sure you want to delete this measurements from", PageNames.Friends, Model.LanguageId) @Model.MeasurementItem.Date.ToShortDateString()
            </div>
            <div class="space-20"></div>
            <div class="col-auto">
                @await LocaleManager.GetTranslation("Height:", PageNames.Friends, Model.LanguageId) @Model.MeasurementItem.Height
            </div>
            <div class="space-20"></div>
            <div class="col-auto">
                @await LocaleManager.GetTranslation("Weight:", PageNames.Friends, Model.LanguageId) @Model.MeasurementItem.Weight
            </div>
            <div class="space-20"></div>
            <div class="col-auto">@await LocaleManager.GetTranslation("Hair color:", PageNames.Friends, Model.LanguageId) @Model.MeasurementItem.HairColor</div>
            <div class="space-20"></div>
            <div class="col-auto">@await LocaleManager.GetTranslation("Eye color:", PageNames.Friends, Model.LanguageId) @Model.MeasurementItem.EyeColor</div>
            <div class="space-20"></div>
            <input asp-for="MeasurementItem.MeasurementId" class="form-control" value="@Model.MeasurementItem.MeasurementId!" type="hidden" />
            <div class="col-auto">
                <Button type="submit" class="btn btn-success leavePage">@await LocaleManager.GetTranslation("Yes, delete this measurement", PageNames.Friends, Model.LanguageId)</Button>
                <a class="btn btn-danger leavePage" asp-controller="Measurements" asp-action="Index">@await LocaleManager.GetTranslation("Cancel", PageNames.AddItem, Model.LanguageId)</a>
            </div>
        </form>
    </div>
</div>