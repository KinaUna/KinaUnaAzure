@using KinaUnaWeb.Services
@using KinaUna.Data
@model KinaUnaWeb.Models.ItemViewModels.MeasurementViewModel
@inject ILocaleManager LocaleManager
@{
    ViewData["Title"] = Model.CurrentProgeny.NickName + " - " + await LocaleManager.GetTranslation("Measurement:", PageNames.Measurements, Model.LanguageId);
}
<div class="ml-xl-auto mr-xl-auto col-xxl-11 col-xxxl-10">
    <div class="row">
        <div class="col ml-xl-auto mr-xl-auto col-lg-10 col-xl-9 col-xxl-8 col-xxxl-7">
            <h2>@ViewData["Title"]</h2>
            <div class="card text-white bg-primary mr-auto">
                <div class="card-header card-header-rose card-title h4">@Model.MeasurementItem.Date.ToString("dd-MMM-yyyy")</div>
                <div class="card-body">
                    <div align="left">
                        @if (Model.MeasurementItem.Height > 0.01)
                        {
                            <div>@await LocaleManager.GetTranslation("Height:", PageNames.Measurements, Model.LanguageId) @Model.MeasurementItem.Height</div>
                        }
                        @if (Model.MeasurementItem.Weight > 0.01)
                        {
                            <div>@await LocaleManager.GetTranslation("Weight:", PageNames.Measurements, Model.LanguageId) @Model.MeasurementItem.Weight</div>
                        }
                        @if (Model.MeasurementItem.Circumference > 0.01)
                        {
                            <div>@await LocaleManager.GetTranslation("Circumference:", PageNames.Measurements, Model.LanguageId) @Model.MeasurementItem.Circumference</div>
                        }
                        @if (!string.IsNullOrEmpty(Model.MeasurementItem.EyeColor))
                        {
                            <div>@await LocaleManager.GetTranslation("Eye color:", PageNames.Measurements, Model.LanguageId) @Model.MeasurementItem.EyeColor</div>
                        }
                        @if (!string.IsNullOrEmpty(Model.MeasurementItem.HairColor))
                        {
                            <div>@await LocaleManager.GetTranslation("Hair color:", PageNames.Measurements, Model.LanguageId) @Model.MeasurementItem.HairColor</div>
                        }
                    </div>
                    @if (Model.IsCurrentUserProgenyAdmin)
                    {
                        <div class="col-12">
                            <a asp-controller="Measurements" asp-action="EditMeasurement" asp-route-itemId="@Model.MeasurementItem.MeasurementId" class="btn btn-info item-details-edit-button"><i class="fas fa-pencil-alt"></i></a>
                            <a asp-controller="Measurements" asp-action="DeleteMeasurement" asp-route-itemId="@Model.MeasurementItem.MeasurementId" class="btn btn-danger item-details-delete-button float-right"><i class="fas fa-trash-alt"></i></a>
                        </div>

                    }
                </div>
            </div>
        </div>
    </div>
</div>
