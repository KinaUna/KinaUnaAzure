@using KinaUnaWeb.Services
@using KinaUna.Data
@model KinaUnaWeb.Models.ItemViewModels.PictureViewModel
@inject ILocaleManager LocaleManager
@{
    ViewData["Title"] = await LocaleManager.GetTranslation("Delete photo", PageNames.Pictures, Model.LanguageId);
}
<h2>@ViewData["Title"]</h2>
<form asp-action="DeletePicture" role="form" method="post">
    <div>
        @await LocaleManager.GetTranslation("Are you sure you want to delete this photo?", PageNames.Pictures, Model.LanguageId)
    </div>
    <div>
        <img src="@Model.PictureLink" class="img-responsive" style="max-width: 600px;" />
        @if (Model.PictureTime.HasValue)
        {
            <div>@await LocaleManager.GetTranslation("Date and time:", PageNames.Pictures, Model.LanguageId) @Model.PictureTime.Value.ToString("dd-MMM-yyyy HH:mm")"</div>
        }
    </div>

    <input asp-for="PictureId" class="form-control" value="@Model.PictureId" type="hidden" />
    <input asp-for="ProgenyId" class="form-control" value="@Model.ProgenyId" type="hidden" />
    <div>
        <Button type="submit" class="btn btn-success leavePage">@await LocaleManager.GetTranslation("Yes - delete this photo", PageNames.Pictures, Model.LanguageId)</Button>
        <a class="btn btn-danger leavePage" asp-controller="Pictures" asp-action="Picture" asp-route-id="@Model.PictureId" asp-route-childId="@Model.ProgenyId">@await LocaleManager.GetTranslation("Cancel", PageNames.AddItem, Model.LanguageId)</a>
    </div>
</form>
