@using KinaUnaWeb.Services
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using KinaUna.Data
@model Measurement
@inject ILocaleManager LocaleManager
@{
    int languageId = LocaleManager.GetLanguageId(Context.Request);
}
<a class="leavePage2" asp-controller="Measurements" asp-action="Index">
    <div class="card bg-primary" style="margin-top: 0; margin-bottom: 8px;">
        <div class="card-body bg-measurement">
            <div class="info-title"><span style="font-size: 18px; color: white; margin-right: 12px;" class="fa fa-weight"></span><strong style="font-size: 12px;" class="text-warning">@Model.Date.ToString("dd-MMM-yyyy HH:mm") </strong></div>
            <div style="margin-left: 2px; font-size: 12px;" class="text-white">@await LocaleManager.GetTranslation("Height:", PageNames.Measurements, languageId) @Model.Height</div>
            <div style="margin-left: 2px; font-size: 12px;" class="text-white">@await LocaleManager.GetTranslation("Weight:", PageNames.Measurements, languageId) @Model.Weight</div>
        </div>
    </div>
</a>