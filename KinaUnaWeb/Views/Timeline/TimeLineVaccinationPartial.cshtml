@model Vaccination
<a class="leavePage2" asp-controller="Vaccinations" asp-action="Index">
    <div class="card bg-primary" style="margin-top: 0; margin-bottom: 8px;">

        <div class="card-body" style="background: #c800c8; background: rgba(200, 0, 200, 0.5)">
            <div class="info-title"><span style="font-size: 18px; color: white; margin-right: 12px;" class="fa fa-medkit"></span><strong class="text-warning">@Model.VaccinationDate.ToString("dd-MMM-yyyy HH:mm") </strong></div>
            <div style="margin-left: 2px;" class="text-white">@Model.VaccinationName</div>
        </div>
    </div>
</a>