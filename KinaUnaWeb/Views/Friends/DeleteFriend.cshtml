@using KinaUnaWeb.Services
@using KinaUna.Data
@model KinaUnaWeb.Models.ItemViewModels.FriendViewModel
@inject ILocaleManager LocaleManager
@{
    ViewData["Title"] = await LocaleManager.GetTranslation("Delete friend", PageNames.Friends, Model.LanguageId);
}
<div class="ml-xl-auto mr-xl-auto col-xxl-11 col-xxxl-10">
    <div class="add-item-container">
        <h2 class="col-12">@ViewData["Title"]</h2>
        <div class="space-20"></div>
        <form asp-action="DeleteFriend" role="form" method="post">
            <div class="col-auto">
                @await LocaleManager.GetTranslation("Are you sure you want to delete this friend?", PageNames.Friends, Model.LanguageId) @Model.FriendItem.Name
            </div>
            <div class="space-20"></div>
            <div class="col-auto">
                <h4>@Model.FriendItem.Name</h4>
            </div>
            <div class="col-auto">
                <img src="@Model.FriendItem.PictureLink" alt="Friend Picture"/>
            </div>
            <div class="space-20"></div>
            <div class="col-auto">
                @await LocaleManager.GetTranslation("Description:", PageNames.Friends, Model.LanguageId) @Model.FriendItem.Description
            </div>
            <div class="space-20"></div>
            <input asp-for="FriendItem.FriendId" class="form-control" value="@Model.FriendItem.FriendId" type="hidden" />
            <div class ="col-auto">
                <Button type="submit" class="btn btn-success leavePage">@await LocaleManager.GetTranslation("Yes, delete friend", PageNames.Friends, Model.LanguageId)</Button>
                <a class="btn btn-danger leavePage" asp-controller="Friends" asp-action="Index">@await LocaleManager.GetTranslation("Cancel", PageNames.AddItem, Model.LanguageId)</a>
            </div>
        </form>
    </div>
</div>