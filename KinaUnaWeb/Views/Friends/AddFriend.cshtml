@using KinaUnaWeb.Services
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using KinaUna.Data
@model KinaUnaWeb.Models.ItemViewModels.FriendViewModel
@section Scripts{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/zebra_datepicker/dist/css/bootstrap/zebra_datepicker.min.css">
    <link href="/css/amsify.suggestags.css" rel="stylesheet" />
    <script src="/lib/jquery.amsify.suggestags.js"></script>
    <script src="/lib/moment.min.js"></script>
    <script src="/lib/material-kit/plugins/jasny-bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/zebra_datepicker/dist/zebra_datepicker.min.js"></script>
}

@inject ILocaleManager LocaleManager
@{
    ViewData["Title"] = await LocaleManager.GetTranslation("Add friend", PageNames.Friends, Model.LanguageId);
    string addFriendForString = await LocaleManager.GetTranslation("Add friend for:", PageNames.Friends, Model.LanguageId);
}
<h2>@ViewData["Title"]</h2>
<form asp-action="AddFriend" role="form" method="post" enctype="multipart/form-data">

    @if (Model.ProgenyList.Count > 1)
    {
        <div class="form-group">
            <label class="control-label col-sm-3">@addFriendForString </label>
            <div class="col-lg-9">
                <select class="selectpicker form-control-noline" data-style="btn-kinaunaselect" data-size="@Model.ProgenyList.Count" asp-for="FriendItem.ProgenyId" asp-items="@Model.ProgenyList"></select>
            </div>
        </div>
    }
    else
    {
        <div class="form-group">
            <label class="control-label col-sm-3">@addFriendForString</label>
            <div class="col-lg-9">
                <input type="text" readonly class="form-control" value="@Model.ProgenyList[0].Text" />
            </div>
            <input asp-for="FriendItem.ProgenyId" value="@Model.ProgenyList[0].Value" type="hidden" />
        </div>
    }
    <div class="form-group">
        <label asp-for="FriendItem.Name" class="col-lg-3 col-sm-3 control-label">@await LocaleManager.GetTranslation("Name", PageNames.Friends, Model.LanguageId)</label>
        <div class="col-lg-9">
            <input asp-for="FriendItem.Name" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="FriendItem.Description" class="col-lg-3 col-sm-3 control-label">@await LocaleManager.GetTranslation("Description", PageNames.Friends, Model.LanguageId)</label>
        <div class="col-lg-9">
            <textarea asp-for="FriendItem.Description" class="form-control" rows="4"></textarea>
        </div>
    </div>
    <div class="form-group">
        <label class="col-lg-3 col-sm3 control-label">@await LocaleManager.GetTranslation("Picture", PageNames.Friends, Model.LanguageId)</label>
        <div class="col-lg-9">
            <div class="fileinput fileinput-new text-center" data-provides="fileinput">
                <div class="fileinput-new thumbnail img-raised">
                    <img src="~/images/images_placeholder.png" alt="...">
                </div>
                <div class="fileinput-preview fileinput-exists thumbnail img-raised"></div>
                <div>
                    <div class="btn btn-primary btn-round btn-file ">
                        <span data-trigger="fileinput" class="fileinput-new">@await LocaleManager.GetTranslation("Select picture", PageNames.Friends, Model.LanguageId)</span>
                        <span class="fileinput-exists">@await LocaleManager.GetTranslation("Change picture", PageNames.Friends, Model.LanguageId)</span>
                        <input type="file" name="File" accept="image/*" />
                    </div>
                    <br />
                    <a href="#" class="btn btn-danger btn-round fileinput-exists" data-dismiss="fileinput">
                        <i class="fa fa-times"></i> @await LocaleManager.GetTranslation("Remove picture", PageNames.Friends, Model.LanguageId)
                    </a>
                </div>
                <div>
                    <br />@await LocaleManager.GetTranslation("Note: Photos may appear rotated here. If it contains metadata about rotation, it will automatically be rotated after uploading it.", PageNames.Friends, Model.LanguageId)
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="FriendItem.FriendSince" class="col-lg-3 col-sm-3 control-label">@await LocaleManager.GetTranslation("Friends since", PageNames.Friends, Model.LanguageId)</label>
        <div class="col-8 col-xs-7 col-sm-6 col-md-4">
            <div class="input-group date">
                <input id="datetimepicker1" data-format="dd-MMM-yyyy" type="text"
                       class="form-control" data-zdp_readonly_element="false" asp-for="FriendItem.FriendSince" />
            </div>
        </div>
    </div>
    <script type="text/javascript">
        $(function () {
            $('#datetimepicker1').Zebra_DatePicker({
                format: 'd-M-Y',
                open_icon_only: true
            });
        });
    </script>
    <div class="form-group">
        <label asp-for="FriendItem.Type" class="col-lg-3 col-sm-3 control-label">@await LocaleManager.GetTranslation("Type of friend", PageNames.Friends, Model.LanguageId)</label>
        <div class="col-lg-9">
            <select class="selectpicker form-control-noline" data-style="btn-kinaunaselect" data-size="@Model.FriendTypeListEn.Count" asp-for="FriendItem.Type" asp-items="@Model.FriendTypeListEn"></select>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="FriendItem.Context" class="col-lg-3 col-sm-3 control-label">@await LocaleManager.GetTranslation("Context", PageNames.Friends, Model.LanguageId)</label>
        <div class="col-lg-9">
            <input asp-for="FriendItem.Context" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="FriendItem.Notes" class="col-lg-3 col-sm-3 control-label">@await LocaleManager.GetTranslation("Notes", PageNames.Friends, Model.LanguageId)</label>
        <div class="col-lg-9">
            <textarea asp-for="FriendItem.Notes" class="form-control" rows="4" value="@Model.FriendItem.Notes"></textarea>
        </div>
    </div>
    <div class="form-group">
        <label class="col-lg-3 col-sm-2 control-label">@await LocaleManager.GetTranslation("Tags", PageNames.Friends, Model.LanguageId)</label>
        <div class="col-lg-9 col-md-9 col-sm-9">
            <input id="tagList" type="text" asp-for="FriendItem.Tags" value="@Model.FriendItem.Tags" placeholder="Add tag..." class="form-control" />
        </div>
        <script>
            $('input[id="tagList"').amsifySuggestags({
                suggestions: @Html.Raw(Model.TagsList)
            });
        </script>
    </div>
    <div class="form-group">
        <label asp-for="FriendItem.AccessLevel" class="col-lg-3 col-sm-3 control-label">@await LocaleManager.GetTranslation("Access level", PageNames.AccessManagement, Model.LanguageId)</label>
        <div class="col-lg-9">
            <select class="selectpicker form-control-noline" data-style="btn-kinaunaselect" data-size="@Model.AccessLevelListEn.Count" asp-for="FriendItem.AccessLevel" asp-items="@Model.AccessLevelListEn"></select>
        </div>
    </div>
    <div>
        <div class="form-group">
            <div class="col-lg-3 col-sm-3 control-label"></div>
            <div class="col-lg-9">
                <button class="btn btn-success leavePage" type="submit">@await LocaleManager.GetTranslation("Save", PageNames.AddItem, Model.LanguageId)</button>
                <a class="btn btn-danger leavePage" asp-controller="Friends" asp-action="Index">@await LocaleManager.GetTranslation("Cancel", PageNames.AddItem, Model.LanguageId)</a>
            </div>
        </div>
    </div>
</form>