@using KinaUnaWeb.Services
@using KinaUna.Data
@using KinaUnaWeb.Models.ItemViewModels
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model KinaUnaWeb.Models.ItemViewModels.ContactListViewModel
@inject ILocaleManager LocaleManager
@{
    ViewData["Title"] = Model.CurrentProgeny.NickName + " - " + await LocaleManager.GetTranslation("Contacts", PageNames.Contacts, Model.LanguageId);
}
@section Scripts
{
        <script type="text/javascript">
        $(function() {
            $('.button-checkbox').each(function() {

                // Settings
                let $widget = $(this),
                    $button = $widget.find('button'),
                    $checkbox = $widget.find('input:checkbox'),
                    color = $button.data('color'),
                    settings = {
                        on: {
                            icon: 'fas fa-check-square'
                        },
                        off: {
                            icon: 'fas fa-square'
                        }
                    };

                // Event Handlers
                $button.on('click',
                    function() {
                        $checkbox.prop('checked', !$checkbox.is(':checked')).triggerHandler('click');
                        $checkbox.triggerHandler('change');
                        updateDisplay();
                    });
                $checkbox.on('change',
                    function() {
                        updateDisplay();
                    });

                // Actions
                function updateDisplay() {
                    let isChecked = $checkbox.is(':checked');

                    // Set the button's state
                    $button.data('state', (isChecked) ? "on" : "off");

                    // Set the button's icon
                    $button.find('.state-icon')
                        .removeClass()
                        .addClass('state-icon ' + settings[$button.data('state')].icon);

                    // Update the button's color
                    if (isChecked) {
                        $button
                            .removeClass('btn-default')
                            .addClass('btn-' + color + ' active');
                    } else {
                        $button
                            .removeClass('btn-' + color + ' active')
                            .addClass('btn-default');
                    }
                }

                // Initialization
                function init() {
                    updateDisplay();
                    // Inject the icon if applicable
                    if ($button.find('.state-icon').length === 0) {
                        $button.prepend('<i class="state-icon ' + settings[$button.data('state')].icon + '"></i> ');
                    }
                }

                init();
            });
        });
        </script>
        <script type="text/javascript">
        function ShowHideFiltersFunction() {
            let x = document.getElementById("filtersDiv");
            if (x.style.display === "none") {
                x.style.display = "block";
            } else {
                x.style.display = "none";
            }
        }
        </script>
    }

<div class="ml-xl-auto mr-xl-auto col-xxl-11 col-xxxl-10">
    <div class="row">
        <div class="col-12">
            @if (Model.ContactsList == null || !Model.ContactsList.Any())
            {
                <h3 class="title">@ViewData["Title"]</h3>
                <div>Nothing to see here yet.</div>
            }
            else
            {
                @if (Model.IsCurrentUserProgenyAdmin)
                {
                    <div class="btn-group" style="float: right;">
                        <a asp-controller="Contacts" asp-action="AddContact" class="btn btn-info btn-round leavePage">
                            <i class="fas fa-plus"></i> @await LocaleManager.GetTranslation("Add contact", PageNames.Contacts, Model.LanguageId)
                        </a>
                    </div>
                }
                <h2>@ViewData["Title"]</h2>
                <div class="space-20"></div>
                <div>
                    <span>Show:</span>
                    <span class="button-checkbox">
                        <button type="button" class="btn" data-color="primary">@await LocaleManager.GetTranslation("Active contacts", PageNames.Contacts, Model.LanguageId)</button>
                        <input type="checkbox" name="contactClassTrue" style="margin-right: 18px;" checked="checked" class="hidden" hidden />
                    </span>
                    <span class="button-checkbox">
                        <button type="button" class="btn" data-color="primary">@await LocaleManager.GetTranslation("Inactive contacts", PageNames.Contacts, Model.LanguageId)</button>
                        <input type="checkbox" name="contactClassFalse" style="margin-right: 18px;" checked="checked" class="hidden" hidden />
                    </span>

                </div>
                @if (!string.IsNullOrEmpty(Model.TagFilter))
                {
                    <div class="space-20"></div>
                    <div class="text-dark" style="float: right;">
                        @await LocaleManager.GetTranslation("Tag filter:", PageNames.Contacts, Model.LanguageId) <span class="badge badge-pill badge-rose">@Model.TagFilter</span>
                        <a class="btn btn-info btn-sm" asp-action="Index" asp-route-childId="@Model.CurrentProgeny.Id">
                            <i class="fas fa-minus-circle"></i> @await LocaleManager.GetTranslation("Reset filter", PageNames.Contacts, Model.LanguageId)
                        </a>
                    </div>
                    <div class="space-20"></div>
                }
                <div>
                    @foreach (ContactViewModel contactViewModel in Model.ContactsList)
                    {
                        string chkClass = "contactClass" + contactViewModel.ContactItem.Active.ToString();
                        <div class="@chkClass" style="margin-bottom: 15px;">
                            <div class="card text-white bg-info" style="float: left; clear: right; text-align: center; height: 100%; width: 300px; margin-bottom: 15px; margin-left: 5px; margin-right: 5px;">
                                <a class="leavePage" asp-controller="Contacts" asp-action="ContactDetails" asp-route-contactId="@contactViewModel.ContactItem.ContactId">
                                    <div class="card-header card-header-warning card-title">@contactViewModel.ContactItem.DisplayName</div>
                                </a>
                                <div class="card-body">
                                    <div class="card-text">
                                        <a class="leavePage" asp-controller="Contacts" asp-action="ContactDetails" asp-route-contactId="@contactViewModel.ContactItem.ContactId">
                                            <div style="height: 253px;">
                                                <img class="img-thumbnail mx-auto d-block" style="max-height: 250px; max-width: 270px; background: black; margin-bottom: 10px;" src="@contactViewModel.ContactItem.PictureLink" />
                                            </div>
                                            <div class="space-20"></div>
                                            <div class="card-title" align="left">
                                                @contactViewModel.ContactItem.FirstName @contactViewModel.ContactItem.MiddleName @contactViewModel.ContactItem.LastName
                                            </div>
                                            <div class="text-white" align="left">@await LocaleManager.GetTranslation("Email:", PageNames.Contacts, Model.LanguageId) @contactViewModel.ContactItem.Email1 @contactViewModel.ContactItem.Email2</div>
                                            <div class="text-white" align="left">@await LocaleManager.GetTranslation("Phone:", PageNames.Contacts, Model.LanguageId) @contactViewModel.ContactItem.PhoneNumber</div>
                                            <div class="text-white" align="left">@await LocaleManager.GetTranslation("Mobile:", PageNames.Contacts, Model.LanguageId) @contactViewModel.ContactItem.MobileNumber</div>
                                            <div class="text-white" align="left">@await LocaleManager.GetTranslation("Context:", PageNames.Contacts, Model.LanguageId) @contactViewModel.ContactItem.Context</div>
                                        </a>
                                        <div align="left">
                                            @await LocaleManager.GetTranslation("Website:", PageNames.Contacts, Model.LanguageId)
                                            @if (!string.IsNullOrEmpty(contactViewModel.ContactItem.Website))
                                            {
                                                <a class="btn-link-yellow" href="@contactViewModel.ContactItem.Website">@contactViewModel.ContactItem.Website</a>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="space-20"></div>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            @{
                if (!string.IsNullOrEmpty(Model.Tags))
                {
                    string[] tagsList = Model.Tags.Split(',');
                    foreach (string tagString in tagsList)
                    {
                        <a asp-action="Index" asp-route-childId="@Model.CurrentProgeny.Id" asp-route-tagFilter="@tagString" class="btn tag-item leavePage">@tagString</a>
                    }
                }
            }
        </div>
    </div>
</div>
<script type="text/javascript">
    $("input:checkbox:not(:checked)").each(function() {
        let anchor = document.getElementsByClassName($(this).attr("name"));
        $(anchor).hide();
    });
    $("input:checkbox").change(function() {
        let anchor = document.getElementsByClassName($(this).attr("name"));
        $(anchor).toggle();
    });
</script>
