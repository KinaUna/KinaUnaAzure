@using KinaUnaWeb.Services
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using KinaUna.Data
@model KinaUnaWeb.Models.ItemViewModels.ContactViewModel
@section Scripts{
    <link href="/css/amsify.suggestags.css" rel="stylesheet" />
    <script src="/lib/jquery.amsify.suggestags.js"></script>
    <script src="/lib/moment.min.js"></script>
    <script src="/lib/material-kit/plugins/jasny-bootstrap.min.js"></script>
}
@inject ILocaleManager LocaleManager
@{
    ViewData["Title"] = await LocaleManager.GetTranslation("Add contact", PageNames.Contacts, Model.LanguageId);
    string addContactForString = await LocaleManager.GetTranslation("Add contact for:", PageNames.Contacts, Model.LanguageId);
}
<h2>@ViewData["Title"]</h2>
<form asp-action="AddContact" role="form" method="post" enctype="multipart/form-data">

    @if (Model.ProgenyList.Count > 1)
    {
        <div class="form-group">
            <label class="control-label col-sm-3">@addContactForString</label>
            <div class="col-lg-9">
                <select class="selectpicker form-control-noline" data-style="btn-kinaunaselect" data-size="@Model.ProgenyList.Count" asp-for="CurrentProgenyId" asp-items="@Model.ProgenyList"></select>
            </div>
        </div>
    }
    else
    {
        <div class="form-group">
            <label class="control-label col-sm-3">@addContactForString</label>
            <div class="col-lg-9">
                <input type="text" readonly class="form-control" value="@Model.ProgenyList[0].Text" />
            </div>
            <input asp-for="CurrentProgenyId" value="@Model.ProgenyList[0].Value" type="hidden" />
        </div>
    }
    <div class="form-group">
        <label asp-for="FirstName" class="col-lg-3 col-sm-3 control-label">@await LocaleManager.GetTranslation("First name", PageNames.Contacts, Model.LanguageId)</label>
        <div class="col-lg-9">
            <input asp-for="FirstName" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="MiddleName" class="col-lg-3 col-sm-3 control-label">@await LocaleManager.GetTranslation("Middle name", PageNames.Contacts, Model.LanguageId)</label>
        <div class="col-lg-9">
            <input asp-for="MiddleName" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="LastName" class="col-lg-3 col-sm-3 control-label">@await LocaleManager.GetTranslation("Last name", PageNames.Contacts, Model.LanguageId)</label>
        <div class="col-lg-9">
            <input asp-for="LastName" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="DisplayName" class="col-lg-3 col-sm-3 control-label">@await LocaleManager.GetTranslation("Display name", PageNames.Contacts, Model.LanguageId)</label>
        <div class="col-lg-9">
            <input asp-for="DisplayName" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="AddressLine1" class="col-lg-3 col-sm-3 control-label">@await LocaleManager.GetTranslation("Address Line 1", PageNames.Contacts, Model.LanguageId)</label>
        <div class="col-lg-9">
            <input asp-for="AddressLine1" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="AddressLine2" class="col-lg-3 col-sm-3 control-label">@await LocaleManager.GetTranslation("Address Line 2", PageNames.Contacts, Model.LanguageId)</label>
        <div class="col-lg-9">
            <input asp-for="AddressLine2" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="City" class="col-lg-3 col-sm-3 control-label">@await LocaleManager.GetTranslation("City", PageNames.Contacts, Model.LanguageId)</label>
        <div class="col-lg-9">
            <input asp-for="City" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="State" class="col-lg-3 col-sm-3 control-label">@await LocaleManager.GetTranslation("State/region", PageNames.Contacts, Model.LanguageId)</label>
        <div class="col-lg-9">
            <input asp-for="State" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="PostalCode" class="col-lg-3 col-sm-3 control-label">@await LocaleManager.GetTranslation("Postal code", PageNames.Contacts, Model.LanguageId)</label>
        <div class="col-lg-9">
            <input asp-for="PostalCode" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Country" class="col-lg-3 col-sm-3 control-label">@await LocaleManager.GetTranslation("Country", PageNames.Contacts, Model.LanguageId)</label>
        <div class="col-lg-9">
            <input asp-for="Country" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Email1" class="col-lg-3 col-sm-3 control-label">@await LocaleManager.GetTranslation("Email 1", PageNames.Contacts, Model.LanguageId)</label>
        <div class="col-lg-9">
            <input asp-for="Email1" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Email2" class="col-lg-3 col-sm-3 control-label">@await LocaleManager.GetTranslation("Email 2", PageNames.Contacts, Model.LanguageId)</label>
        <div class="col-lg-9">
            <input asp-for="Email2" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber" class="col-lg-3 col-sm-3 control-label">@await LocaleManager.GetTranslation("Phone number", PageNames.Contacts, Model.LanguageId)</label>
        <div class="col-lg-9">
            <input asp-for="PhoneNumber" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="MobileNumber" class="col-lg-3 col-sm-3 control-label">@await LocaleManager.GetTranslation("Mobile number", PageNames.Contacts, Model.LanguageId)</label>
        <div class="col-lg-9">
            <input asp-for="MobileNumber" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-lg-3 col-sm3 control-label">@await LocaleManager.GetTranslation("Picture", PageNames.Contacts, Model.LanguageId)</label>
        <div class="col-lg-9">
            <div class="fileinput fileinput-new text-center" data-provides="fileinput">
                <div class="fileinput-new thumbnail img-raised">
                    <img src="~/images/images_placeholder.png" alt="...">
                </div>
                <div class="fileinput-preview fileinput-exists thumbnail img-raised"></div>
                <div>
                    <div class="btn btn-primary btn-round btn-file ">
                        <span data-trigger="fileinput" class="fileinput-new">@await LocaleManager.GetTranslation("Select picture", PageNames.Contacts, Model.LanguageId)</span>
                        <span class="fileinput-exists">@await LocaleManager.GetTranslation("Change picture", PageNames.Contacts, Model.LanguageId)</span>
                        <input type="file" name="File" accept="image/*" />
                    </div>
                    <br />
                    <a href="#" class="btn btn-danger btn-round fileinput-exists" data-dismiss="fileinput">
                        <i class="fa fa-times"></i> @await LocaleManager.GetTranslation("Remove picture", PageNames.Contacts, Model.LanguageId)
                    </a>
                </div>
                <div>
                    <br />@await LocaleManager.GetTranslation("Note: Photos may appear rotated here. If it contains metadata about rotation, it will automatically be rotated after uploading it.", PageNames.Contacts, Model.LanguageId)
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Website" class="col-lg-3 col-sm-3 control-label">@await LocaleManager.GetTranslation("Website", PageNames.Contacts, Model.LanguageId)</label>
        <div class="col-lg-9">
            <input asp-for="Website" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Context" class="col-lg-3 col-sm-3 control-label">@await LocaleManager.GetTranslation("Context", PageNames.Contacts, Model.LanguageId)</label>
        <div class="col-lg-9">
            <input asp-for="Context" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Notes" class="col-lg-3 col-sm-3 control-label">@await LocaleManager.GetTranslation("Notes", PageNames.Contacts, Model.LanguageId)</label>
        <div class="col-lg-9">
            <textarea rows="4" asp-for="Notes" class="form-control"></textarea>
        </div>
    </div>
    <div class="form-group">
        <label class="col-lg-3 col-sm-2 control-label">@await LocaleManager.GetTranslation("Tags", PageNames.Contacts, Model.LanguageId)</label>
        <div class="col-lg-9 col-md-9 col-sm-9">
            <input id="tagList" type="text" asp-for="Tags" value="@Model.Tags" placeholder="Add tag..." class="form-control" />
        </div>
        <script>
            $('input[name="Tags"').amsifySuggestags({
                suggestions: @Html.Raw(Model.TagsList)
            });
        </script>
    </div>
    <div class="form-group">
        <label asp-for="AccessLevel" class="col-lg-3 col-sm-3 control-label">@await LocaleManager.GetTranslation("Access level", PageNames.AccessManagement, Model.LanguageId)</label>
        <div class="col-lg-9">
            <select class="selectpicker form-control-noline" data-style="btn-kinaunaselect" data-size="@Model.AccessLevelListEn.Count" asp-for="AccessLevel" asp-items="@Model.AccessLevelListEn"></select>
        </div>
    </div>
    <div>
        <input asp-for="Active" value="true" hidden />
        <div class="form-group">
            <div class="col-lg-3 col-sm-3 control-label"></div>
            <div class="col-lg-9">
                <button class="btn btn-success leavePage" type="submit">@await LocaleManager.GetTranslation("Save", PageNames.AddItem, Model.LanguageId)</button>
                <a class="btn btn-danger leavePage" asp-controller="Contacts" asp-action="Index">@await LocaleManager.GetTranslation("Cancel", PageNames.AddItem, Model.LanguageId)</a>
            </div>

        </div>
    </div>
</form>