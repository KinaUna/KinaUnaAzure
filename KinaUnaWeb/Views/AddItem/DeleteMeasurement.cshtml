@using KinaUnaWeb.Services
@using KinaUna.Data
@model KinaUnaWeb.Models.ItemViewModels.MeasurementViewModel
@inject ILocaleManager LocaleManager
@{
    ViewData["Title"] = await LocaleManager.GetTranslation("Delete measurement", PageNames.Measurements, Model.LanguageId);
}
<h2>@ViewData["Title"]</h2>
<form asp-action="DeleteMeasurement" role="form" method="post">
    <div>
        @await LocaleManager.GetTranslation("Are you sure you want to delete this measurements from", PageNames.Friends, Model.LanguageId) @Model.Measurement.Date.ToShortDateString()
    </div>
    <br/>
    <div>
        @await LocaleManager.GetTranslation("Height:", PageNames.Friends, Model.LanguageId) @Model.Measurement.Height
    </div>
    <br/>
    <div>
        @await LocaleManager.GetTranslation("Weight:", PageNames.Friends, Model.LanguageId) @Model.Measurement.Weight
    </div>
    <br/>
    <div>@await LocaleManager.GetTranslation("Hair color:", PageNames.Friends, Model.LanguageId) @Model.Measurement.HairColor</div>
    <br/>
    <div>@await LocaleManager.GetTranslation("Eye color:", PageNames.Friends, Model.LanguageId) @Model.Measurement.EyeColor</div>
    <br />
    <input asp-for="Measurement.MeasurementId" class="form-control" value="@Model.Measurement.MeasurementId" type="hidden" />
    <div>
        <Button type="submit" class="btn btn-success leavePage">@await LocaleManager.GetTranslation("Yes, delete this measurement", PageNames.Friends, Model.LanguageId)</Button>
        <a class="btn btn-danger leavePage" asp-controller="Measurements" asp-action="Index">@await LocaleManager.GetTranslation("Cancel", PageNames.AddItem, Model.LanguageId)</a>
    </div>
</form>