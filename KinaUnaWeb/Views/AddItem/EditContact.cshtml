@model KinaUnaWeb.Models.ItemViewModels.ContactViewModel
@section Scripts{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/zebra_datepicker/dist/css/bootstrap/zebra_datepicker.min.css">
    <link href="/css/amsify.suggestags.css" rel="stylesheet" />
    <script src="/lib/jquery.amsify.suggestags.js"></script>
    <script src="/lib/moment.min.js"></script>
    <script src="/lib/material-kit/plugins/jasny-bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/zebra_datepicker/dist/zebra_datepicker.min.js"></script>
}
<H4>Edit Contact</H4>
<form asp-action="EditContact" role="form" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="FirstName" class="col-lg-3 col-sm-3 control-label">First Name</label>
        <div class="col-lg-9">
            <input asp-for="FirstName" class="form-control" value="@Model.FirstName" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="MiddleName" class="col-lg-3 col-sm-3 control-label">Middle Name</label>
        <div class="col-lg-9">
            <input asp-for="MiddleName" class="form-control" value="@Model.MiddleName" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="LastName" class="col-lg-3 col-sm-3 control-label">Last Name</label>
        <div class="col-lg-9">
            <input asp-for="LastName" class="form-control" value="@Model.LastName" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-lg-3 col-sm3 control-label">Picture</label>
        <div class="col-lg-9">
            <div class="fileinput fileinput-new text-center" data-provides="fileinput">
                <div class="fileinput-new thumbnail img-raised">
                    <img src="@Model.PictureLink" alt="...">
                </div>
                <div class="fileinput-preview fileinput-exists thumbnail img-raised"></div>
                <div>
                    <div class="btn btn-primary btn-round btn-file ">
                        <span data-trigger="fileinput" class="fileinput-new">New picture</span>
                        <span class="fileinput-exists">Change</span>
                        <input type="file" name="File" accept="image/*" />
                    </div>
                    <br />
                    <a href="#" class="btn btn-danger btn-round fileinput-exists" data-dismiss="fileinput">
                        <i class="fa fa-times"></i> Remove
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="DisplayName" class="col-lg-3 col-sm-3 control-label">Display Name</label>
        <div class="col-lg-9">
            <input asp-for="DisplayName" class="form-control" value="@Model.DisplayName" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="AddressLine1" class="col-lg-3 col-sm-3 control-label">Address Line 1</label>
        <div class="col-lg-9">
            <input asp-for="AddressLine1" class="form-control" value="@Model.AddressLine1" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="AddressLine2" class="col-lg-3 col-sm-3 control-label">Adress Line 2</label>
        <div class="col-lg-9">
            <input asp-for="AddressLine2" class="form-control" value="@Model.AddressLine2" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="City" class="col-lg-3 col-sm-3 control-label"></label>
        <div class="col-lg-9">
            <input asp-for="City" class="form-control" value="@Model.City" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="State" class="col-lg-3 col-sm-3 control-label">State/Region</label>
        <div class="col-lg-9">
            <input asp-for="State" class="form-control" value="@Model.State" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="PostalCode" class="col-lg-3 col-sm-3 control-label">Postal Code</label>
        <div class="col-lg-9">
            <input asp-for="PostalCode" class="form-control" value="@Model.PostalCode" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Country" class="col-lg-3 col-sm-3 control-label"></label>
        <div class="col-lg-9">
            <input asp-for="Country" class="form-control" value="@Model.Country" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Email1" class="col-lg-3 col-sm-3 control-label">Email 1</label>
        <div class="col-lg-9">
            <input asp-for="Email1" class="form-control" value="@Model.Email1" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Email2" class="col-lg-3 col-sm-3 control-label">Email 2</label>
        <div class="col-lg-9">
            <input asp-for="Email2" class="form-control" value="@Model.Email2" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber" class="col-lg-3 col-sm-3 control-label">Phone Number</label>
        <div class="col-lg-9">
            <input asp-for="PhoneNumber" class="form-control" value="@Model.PhoneNumber" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="MobileNumber" class="col-lg-3 col-sm-3 control-label">Mobile Number</label>
        <div class="col-lg-9">
            <input asp-for="MobileNumber" class="form-control" value="@Model.MobileNumber" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Website" class="col-lg-3 col-sm-3 control-label"></label>
        <div class="col-lg-9">
            <input asp-for="Website" class="form-control" value="@Model.Website" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Context" class="col-lg-3 col-sm-3 control-label"></label>
        <div class="col-lg-9">
            <input asp-for="Context" class="form-control" value="@Model.Context" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Notes" class="col-lg-3 col-sm-3 control-label"></label>
        <div class="col-lg-9">
            <textarea asp-for="Notes" class="form-control" rows="4" value="@Model.Notes"></textarea>
        </div>
    </div>
    <div class="form-group">
        <label class="col-lg-3 col-sm-2 control-label">Tags</label>
        <div class="col-lg-9 col-md-9 col-sm-9">
            <input id="tagList" type="text" asp-for="Tags" value="@Model.Tags" placeholder="Add tag..." class="form-control" />
        </div>
        <script>
            $('input[name="Tags"').amsifySuggestags({
                suggestions: @Html.Raw(ViewBag.TagsList)
            });
        </script>
    </div>
    <div class="form-group">
        <label asp-for="DateAdded" class="col-lg-3 col-sm-3 control-label">Date and Time</label>
        <div class="col-8 col-xs-7 col-sm-6 col-md-4">
            <div class="input-group date">
                <input id="datetimepicker1" data-format="dd-MMM-yyyy HH:mm" type="text" class="form-control" data-zdp_readonly_element="false" asp-for="DateAdded" value="@Model.DateAdded.Value.ToString("dd-MMM-yyyy HH:mm")" />
            </div>
        </div>
    </div>
    <script type="text/javascript">
        $(function () {
            $('#datetimepicker1').Zebra_DatePicker({
                format: 'd-M-Y H:i',
                open_icon_only: true
            });
        });
    </script>
    <div class="form-group">
        <label asp-for="AccessLevel" class="col-lg-3 col-sm-3 control-label">Access Level</label>
        <div class="col-lg-9">
            <select class="selectpicker form-control-noline" data-style="btn-kinaunaselect" data-size="@Model.AccessLevelListEn.Count" asp-for="AccessLevel" asp-items="@Model.AccessLevelListEn"></select>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Active" class="col-lg-3 col-sm-3 control-label">Active</label>
        <div class="col-lg-1">
            <input type="checkbox" asp-for="Active" class="form-control" value="@Model.Active" />
        </div>
    </div>
    <input asp-for="AddressIdNumber" value="@Model.AddressIdNumber" type="hidden" />
    <input asp-for="ProgenyId" value="@Model.ProgenyId" type="hidden" />
    <input asp-for="ContactId" value="@Model.ContactId" type="hidden" />
    <input asp-for="PictureLink" value="@Model.PictureLink" type="hidden" />
    <input asp-for="Author" value="@Model.Author" type="hidden" />
    <div>
        <div class="form-group">
            <div class="col-lg-3 col-sm-3 control-label"></div>
            <div class="col-lg-9">
                <button class="btn btn-success leavePage" type="submit">Save</button>
                <a class="btn btn-danger leavePage" asp-controller="Contacts" asp-action="Index">Cancel</a>
            </div>
        </div>
    </div>
</form>