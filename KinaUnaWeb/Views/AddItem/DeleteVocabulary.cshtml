@model KinaUnaWeb.Models.VocabularyItem
<H4>Delete Word: @Model.Word</H4>
<form asp-action="DeleteVocabulary" role="form" method="post">
    <div>
        Are you sure you want to delete @Model.Word?
    </div>
    <br/>
    <div>
        Description: @Model.Description
    </div>
    <br/>
    <input asp-for="WordId" class="form-control" value="@Model.WordId" type="hidden" />
    <div><Button type="submit" class="btn btn-success leavePage">Yes</Button><a class="btn btn-danger leavePage" asp-controller="Vocabulary" asp-action="Index">Cancel</a></div>
</form>
