@model KinaUnaWeb.Models.Vaccination
<H4>Slet vaccination fra @Model.VaccinationDate</H4>
<form asp-action="DeleteVaccination" role="form" method="post">
    <div>
        Er du sikker på at du vil slette @Model.VaccinationName ?
    </div>
    <br/>
    <div>Beskrivelse: @Model.VaccinationDescription</div>
    <br/>
    <div>
        Noter: @Model.Notes
    </div>
    <br/>
    <div>Dato: @Model.VaccinationDate.ToString("dd-MMM-yyyy")</div>
    <br />
    <input asp-for="VaccinationId" class="form-control" value="@Model.VaccinationId" type="hidden" />
    <div><Button type="submit" class="btn btn-success leavePage">Ja - slet</Button><a class="btn btn-danger leavePage" asp-controller="Vaccinations" asp-action="Index">Nej - fortyd</a></div>
</form>