@using Microsoft.CodeAnalysis.CSharp.Syntax
@model KinaUnaWeb.Models.ItemViewModels.UploadVideoViewModel
@section Scripts{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/zebra_datepicker/dist/css/bootstrap/zebra_datepicker.min.css">
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/2017.2.621/styles/kendo.common-nova.min.css" />
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/2017.2.621/styles/kendo.nova.min.css" />
    <script src="https://kendo.cdn.telerik.com/2017.2.621/js/kendo.all.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2017.2.621/js/kendo.aspnetmvc.min.js"></script>
    <script src="/lib/material-kit/plugins/jasny-bootstrap.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/zebra_datepicker/dist/zebra_datepicker.min.js"></script>
}
<H3 class="title">Add Youtube Video</H3>
<div class="modal-body form-horizontal">
    <div class="row">
        <div class="col-lg-10">
            <form class="form-group" asp-controller="AddItem" asp-action="UploadVideo" enctype="multipart/form-data" method="post">
                @if (Model.ProgenyList.Count > 1)
                {
                    <div class="form-group">
                        <label class="control-label col">Add Video for: </label>
                        <div class="col-lg-9">
                            <select class="selectpicker" data-style="select-with-transition" data-size="@Model.ProgenyList.Count" asp-for="ProgenyId" asp-items="@Model.ProgenyList"></select>
                        </div>
                    </div>
                }
                else
                {
                    <div class="form-group">
                        <label class="control-label col-sm-3">Upload Video for: </label>
                        <div class="col-lg-9">
                            <input type="text" readonly class="form-control" value="@Model.ProgenyList[0].Text" />
                        </div>
                        <input asp-for="ProgenyId" value="@Model.ProgenyList[0].Value" type="hidden" />
                    </div>

                }

                <div class="form-group">
                    <label class="col-lg-3 col-sm3 control-label">Paste the link or embed code here:</label>
                    <div class="col-lg-9">
                        <textarea class="form-control" asp-for="FileLink" rows="5" cols="40"></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 col-sm-2 control-label">Duration</label>
                    <div class="col-md-10">
                        @{
                            int hours = 0;
                            int minutes = 0;
                            int seconds = 0;
                            if (Model.DurationHours + Model.DurationMinutes + Model.DurationSeconds != String.Empty)
                            {
                                Int32.TryParse(Model.DurationHours, out hours);
                                Int32.TryParse(Model.DurationMinutes, out minutes);
                                Int32.TryParse(Model.DurationSeconds, out seconds);
                            }
                        }
                        @(Html.Kendo().NumericTextBox<int>().Name("DurationHours").Format("0").Min(0).Max(100).Step(1).Value(hours).HtmlAttributes(new { style = "background: rgba(169, 247, 83, 0.27)" }))H:
                        @(Html.Kendo().NumericTextBox<int>().Name("DurationMinutes").Format("0").Min(0).Max(59).Step(1).Value(minutes).HtmlAttributes(new { style = "background: rgba(169, 247, 83, 0.27)" }))m:
                        @(Html.Kendo().NumericTextBox<int>().Name("DurationSeconds").Format("0").Min(0).Max(59).Step(1).Value(seconds).HtmlAttributes(new { style = "background: rgba(169, 247, 83, 0.27)" }))s
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="VideoTime" class="col-lg-3 col-sm-3 control-label">Video Date and Time</label>
                    <div class="col-lg-3">
                        <div class="input-group date">
                            <input style="width: 300px;" id="datetimepicker1" data-format="dd-MMM-yyyy HH:mm" type="text"
                                   class="form-control" data-zdp_readonly_element="false" asp-for="VideoTime"
                                   value="@Model.VideoTime.Value.ToString("dd-MMM-yyyy HH:mm")" />
                        </div>
                    </div>
                </div>
                <script type="text/javascript">
                    $(function () {
                        $('#datetimepicker1').Zebra_DatePicker({
                            format: 'd-M-Y H:i',
                            open_icon_only: true
                        });
                    });
                </script>
                <div class="form-group">
                    <label asp-for="AccessLevel" class="col-lg-3 col-sm-3 control-label">Access Level</label>
                    <div class="col-lg-9">
                        <select class="selectpicker form-control-noline" data-style="select-with-transition" data-size="@Model.AccessLevelListEn.Count" asp-for="AccessLevel" asp-items="@Model.AccessLevelListEn"></select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-3 col-sm-3"></div>
                    <input asp-for="Owners" class="form-control" value="@Model.Owners" type="hidden" />
                    <div class="col-lg-9">
                        <button class="btn btn-success" type="submit">Upload</button>
                        <a class="btn btn-danger" asp-controller="Videos" asp-action="Index">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("form").submit(function () {
            var currentEffect = 'roundBounce';
            runWaitMe(currentEffect);

            function runWaitMe(effect) {
                $('body').waitMe({
                    //none, rotateplane, stretch, orbit, roundBounce, win8,
                    //win8_linear, ios, facebook, rotation, timer, pulse,
                    //progressBar, bouncePulse or img
                    effect: 'roundBounce',
                    //place text under the effect (string).
                    text: '',
                    //background for container (string).
                    bg: 'rgba(255,255,255,0.7)',
                    //color for background animation and text (string).
                    color: '#3a2051',
                    //max size
                    maxSize: '',
                    //wait time im ms to close
                    waitTime: -1,
                    //url to image
                    source: '',
                    //or 'horizontal'
                    textPos: 'vertical',
                    //font size
                    fontSize: '',
                    // callback
                    onClose: function () { }
                });
            }
        });
    });
</script>