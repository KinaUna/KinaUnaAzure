@model KinaUnaWeb.Models.ItemViewModels.ContactViewModel
@section Scripts{
    <link href="/css/amsify.suggestags.css" rel="stylesheet" />
    <script src="/lib/jquery.amsify.suggestags.js"></script>
    <script src="/lib/moment.min.js"></script>
    <script src="/lib/momentLocale/da.js"></script>
    <script src="/lib/material-kit/plugins/jasny-bootstrap.min.js"></script>
}
<H4>Tilføj kontakt</H4>
<form asp-action="AddContact" role="form" method="post" enctype="multipart/form-data">
    @if (Model.ProgenyList.Count > 1)
    {
        <div class="form-group">
            <label class="control-label col-sm-3">Tilføj kontakt for</label>
            <div class="col-lg-9">
                <select class="selectpicker form-control-noline" data-style="btn-kinaunaselect" data-size="@Model.ProgenyList.Count" asp-for="ProgenyId" asp-items="@Model.ProgenyList"></select>
            </div>
        </div>
    }
    else
    {
        <div class="form-group">
            <label class="control-label col-sm-3">Tilføj kontakt for</label>
            <div class="col-lg-9">
                <input type="text" readonly class="form-control" value="@Model.ProgenyList[0].Text" />
            </div>
            <input asp-for="ProgenyId" value="@Model.ProgenyList[0].Value" type="hidden" />
        </div>
    }
    <div class="form-group">
        <label asp-for="FirstName" class="col-lg-3 col-sm-3 control-label">Fornavn</label>
        <div class="col-lg-9">
            <input asp-for="FirstName" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="MiddleName" class="col-lg-3 col-sm-3 control-label">Mellemnavn</label>
        <div class="col-lg-9">
            <input asp-for="MiddleName" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="LastName" class="col-lg-3 col-sm-3 control-label">Efternavn</label>
        <div class="col-lg-9">
            <input asp-for="LastName" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="DisplayName" class="col-lg-3 col-sm-3 control-label">Visningsnavn</label>
        <div class="col-lg-9">
            <input asp-for="DisplayName" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="AddressLine1" class="col-lg-3 col-sm-3 control-label">Adresse linie 1</label>
        <div class="col-lg-9">
            <input asp-for="AddressLine1" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="AddressLine2" class="col-lg-3 col-sm-3 control-label">Adresse linie 2</label>
        <div class="col-lg-9">
            <input asp-for="AddressLine2" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="City" class="col-lg-3 col-sm-3 control-label">By</label>
        <div class="col-lg-9">
            <input asp-for="City" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="State" class="col-lg-3 col-sm-3 control-label">Stat/region</label>
        <div class="col-lg-9">
            <input asp-for="State" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="PostalCode" class="col-lg-3 col-sm-3 control-label">Postnummer</label>
        <div class="col-lg-9">
            <input asp-for="PostalCode" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Country" class="col-lg-3 col-sm-3 control-label">Land</label>
        <div class="col-lg-9">
            <input asp-for="Country" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Email1" class="col-lg-3 col-sm-3 control-label">Email 1</label>
        <div class="col-lg-9">
            <input asp-for="Email1" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Email2" class="col-lg-3 col-sm-3 control-label">Email 2</label>
        <div class="col-lg-9">
            <input asp-for="Email2" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber" class="col-lg-3 col-sm-3 control-label">Telefon</label>
        <div class="col-lg-9">
            <input asp-for="PhoneNumber" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="MobileNumber" class="col-lg-3 col-sm-3 control-label">Mobil</label>
        <div class="col-lg-9">
            <input asp-for="MobileNumber" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-lg-3 col-sm3 control-label">Foto</label>
        <div class="col-lg-9">
            <div class="fileinput fileinput-new text-center" data-provides="fileinput">
                <div class="fileinput-new thumbnail img-raised">
                    <img src="~/images/images_placeholder.png" alt="...">
                </div>
                <div class="fileinput-preview fileinput-exists thumbnail img-raised"></div>
                <div>
                    <div class="btn btn-primary btn-round btn-file ">
                        <span data-trigger="fileinput" class="fileinput-new">Vælg foto</span>
                        <span class="fileinput-exists">Vælg et andet foto</span>
                        <input type="file" name="File" accept="image/*" />
                    </div>
                    <br />
                    <a href="#" class="btn btn-danger btn-round fileinput-exists" data-dismiss="fileinput">
                        <i class="fa fa-times"></i> Fjern
                    </a>
                </div>
                <div>
                    <br />OBS: Foto kan være roteret her. Hvis det indeholder metadata om rotation vil det automatisk blive roteret efter det er uploaded.
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Website" class="col-lg-3 col-sm-3 control-label">Website</label>
        <div class="col-lg-9">
            <input asp-for="Website" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Context" class="col-lg-3 col-sm-3 control-label">Sammenhæng</label>
        <div class="col-lg-9">
            <input asp-for="Context" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Notes" class="col-lg-3 col-sm-3 control-label">Noter</label>
        <div class="col-lg-9">
            <textarea rows="4" asp-for="Notes" class="form-control"></textarea>
        </div>
    </div>
    <div class="form-group">
        <label class="col-lg-3 col-sm-2 control-label">Tags</label>
        <div class="col-lg-9 col-md-9 col-sm-9">
            <input id="tagList" type="text" asp-for="Tags" value="@Model.Tags" placeholder="Add tag..." class="form-control" />
        </div>
        <script>
            $('input[name="Tags"').amsifySuggestags({
                suggestions: @Html.Raw(ViewBag.TagsList)
            });
        </script>
    </div>
    <div class="form-group">
        <label asp-for="AccessLevel" class="col-lg-3 col-sm-3 control-label">Adgangsniveau</label>
        <div class="col-lg-9">
            <select class="selectpicker form-control-noline" data-style="btn-kinaunaselect" data-size="@Model.AccessLevelListDa.Count" asp-for="AccessLevel" asp-items="@Model.AccessLevelListDa"></select>
        </div>
    </div>
    <div>
        <input asp-for="Active" value="true" hidden />
        <div class="form-group">
            <div class="col-lg-3 col-sm-3 control-label"></div>
            <div class="col-lg-9">
                <button class="btn btn-success leavePage" type="submit">Gem</button>
                <a class="btn btn-danger leavePage" asp-controller="Contacts" asp-action="Index">Afbryd</a>
            </div>
        </div>
    </div>
</form>