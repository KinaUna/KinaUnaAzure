@model KinaUnaWeb.Models.ItemViewModels.VaccinationViewModel
@section Scripts{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/zebra_datepicker/dist/css/bootstrap/zebra_datepicker.min.css">
    <script src="/lib/moment.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/zebra_datepicker/dist/zebra_datepicker.min.js"></script>
}
<H3 class="title">Edit Vaccination</H3>
<form asp-action="EditVaccination" role="form" method="post">
    <div class="form-group">
        <label asp-for="VaccinationName" class="col-lg-3 col-sm-3 control-label">Vaccination Name</label>
        <div class="col-lg-9">
            <input asp-for="VaccinationName" class="form-control" value="@Model.VaccinationName" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="VaccinationDescription" class="col-lg-3 col-sm-3 control-label">Description</label>
        <div class="col-lg-9">
            <textarea asp-for="VaccinationDescription" class="form-control" rows="4" value="@Model.VaccinationDescription"></textarea>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Notes" class="col-lg-3 col-sm-3 control-label"></label>
        <div class="col-lg-9">
            <textarea asp-for="Notes" class="form-control" rows="4" value="@Model.Notes"></textarea>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="VaccinationDate" class="col-lg-3 col-sm-3 control-label">Date</label>
        <div class="col-8 col-xs-7 col-sm-6 col-md-4">
            <div class="input-group date">
                <input id="datetimepicker1" data-format="dd-MMM-yyyy" type="text"
                       class="form-control" data-zdp_readonly_element="false" asp-for="VaccinationDate" value="@Model.VaccinationDate.ToString("dd-MMM-yyyy")" />
            </div>
        </div>
    </div>
    <script type="text/javascript">
        $(function () {
            $('#datetimepicker1').Zebra_DatePicker({
                format: 'd-M-Y',
                open_icon_only: true
            });
        });
    </script>
    <div class="form-group">
        <label asp-for="AccessLevel" class="col-lg-3 col-sm-3 control-label">Access Level</label>
        <div class="col-lg-9">
            <select class="selectpicker form-control-noline" data-style="select-with-transition" data-size="@Model.AccessLevelListEn.Count" asp-for="AccessLevel" asp-items="@Model.AccessLevelListEn"></select>
        </div>
    </div>
    <input asp-for="ProgenyId" value="@Model.ProgenyId" type="hidden" />
    <input asp-for="VaccinationId" value="@Model.VaccinationId" type="hidden" />
    <input asp-for="Author" value="@Model.Author" type="hidden" />
    <div>
        <div class="form-group">
            <div class="col-lg-3 col-sm-3 control-label"></div>
            <div class="col-lg-9">
                <button class="btn btn-success" type="submit">Save</button>
                <a class="btn btn-danger" asp-controller="Vaccinations" asp-action="Index">Cancel</a>
            </div>
        </div>
    </div>
</form>
<script>
    $(document).ready(function () {
        $("form").submit(function () {
            var currentEffect = 'roundBounce';
            runWaitMe(currentEffect);

            function runWaitMe(effect) {
                $('body').waitMe({
                    //none, rotateplane, stretch, orbit, roundBounce, win8,
                    //win8_linear, ios, facebook, rotation, timer, pulse,
                    //progressBar, bouncePulse or img
                    effect: 'roundBounce',
                    //place text under the effect (string).
                    text: '',
                    //background for container (string).
                    bg: 'rgba(255,255,255,0.7)',
                    //color for background animation and text (string).
                    color: '#3a2051',
                    //max size
                    maxSize: '',
                    //wait time im ms to close
                    waitTime: -1,
                    //url to image
                    source: '',
                    //or 'horizontal'
                    textPos: 'vertical',
                    //font size
                    fontSize: '',
                    // callback
                    onClose: function () { }
                });
            }
        });
    });
</script>