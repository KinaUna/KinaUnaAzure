@model KinaUnaWeb.Models.ItemViewModels.UploadPictureViewModel
@section Scripts{
    <script src="/lib/material-kit/plugins/jasny-bootstrap.min.js"></script>
}
<H3 class="title">Add Photo</H3>
<div class="modal-body form-horizontal">
    <div class="row">
        <div class="col-lg-9">
            <form class="form-group" asp-controller="AddItem" asp-action="UploadPictures" enctype="multipart/form-data" method="post">
                @if (Model.ProgenyList.Count > 1)
                {
                    <div class="form-group">
                        <label class="control-label col">Upload picture for: </label>
                        <div class="col-lg-9">
                            <select class="selectpicker" data-style="btn-kinaunaselect" data-size="@Model.ProgenyList.Count" asp-for="ProgenyId" asp-items="@Model.ProgenyList"></select>
                        </div>
                    </div>
                }
                else
                {
                    <div class="form-group">
                        <label class="control-label col-sm-3">Upload Photo for: </label>
                        <div class="col-lg-9">
                            <input type="text" readonly class="form-control" value="@Model.ProgenyList[0].Text" />
                        </div>
                        <input asp-for="ProgenyId" value="@Model.ProgenyList[0].Value" type="hidden" />
                    </div>
                }
                <div class="form-group">
                    <label class="col-lg-3 col-sm3 control-label"></label>
                    <div class="col-lg-9">
                        <div class="fileinput fileinput-new text-center" data-provides="fileinput">
                            <div class="fileinput-new thumbnail img-raised" style="height: 240px;">
                                <img src="~/images/images_placeholder.png" alt="..." style="max-height: 100%;">
                            </div>
                            <div class="fileinput-preview fileinput-exists thumbnail img-raised"></div>
                            <div>
                                <div class="btn btn-primary btn-round btn-file ">
                                    <span data-trigger="fileinput" class="fileinput-new">Select image(s)</span>
                                    <span class="fileinput-exists">Change</span>
                                    <input type="file" name="Files" accept="image/*" multiple />
                                </div>
                                <br />
                                <a href="#" class="btn btn-danger btn-round fileinput-exists" data-dismiss="fileinput">
                                    <i class="fa fa-times"></i> Reset
                                </a>
                            </div>
                            <div>
                                <br />Note: Photos may appear rotated here. If it contains metadata about rotation, it will automatically be rotated after uploading it.<br />
                                If more than one photo is selected only one is previewed above.
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="AccessLevel" class="col-lg-3 col-sm-3 control-label">Access Level</label>
                    <div class="col-lg-9">
                        <select class="selectpicker form-control-noline" data-style="btn-kinaunaselect" data-size="@Model.AccessLevelListEn.Count" asp-for="AccessLevel" asp-items="@Model.AccessLevelListEn"></select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-3 col-sm-3"></div>
                    <input asp-for="Owners" class="form-control" value="@Model.Owners" type="hidden" />
                    <div class="col-lg-9">
                        <button class="btn btn-success leavePage" type="submit">Upload</button>
                        <a class="btn btn-danger leavePage" asp-controller="Pictures" asp-action="Index">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>