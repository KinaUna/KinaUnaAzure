@model KinaUnaWeb.Models.ItemViewModels.SkillViewModel
@section Scripts{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/zebra_datepicker/dist/css/bootstrap/zebra_datepicker.min.css">
    <script src="/lib/moment.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/zebra_datepicker/dist/zebra_datepicker.min.js"></script>
}
<H4>Add Skill</H4>
<form asp-action="AddSkill" role="form" method="post">
    @if (Model.ProgenyList.Count > 1)
    {
        <div class="form-group">
            <label class="control-label col-sm-3">Add Skill for: </label>
            <div class="col-lg-9">
                <select class="selectpicker form-control-noline" data-style="select-with-transition" data-size="@Model.ProgenyList.Count" asp-for="ProgenyId" asp-items="@Model.ProgenyList"></select>
            </div>
        </div>
    }
    else
    {
        <div class="form-group">
            <label class="control-label col-sm-3">Add Skill for</label>
            <div class="col-lg-6">
                <input type="text" readonly class="form-control" value="@Model.ProgenyList[0].Text" />
            </div>
            <input asp-for="ProgenyId" value="@Model.ProgenyList[0].Value" type="hidden" />
        </div>
    }
    <div class="form-group">
        <label asp-for="Name" class="col-lg-3 col-sm-3 control-label">Skill Name</label>
        <div class="col-lg-6">
            <input asp-for="Name" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="col-lg-3 col-sm-3 control-label"></label>
        <div class="col-lg-6">
            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Category" class="col-lg-3 col-sm-3 control-label"></label>
        <div class="col-lg-6">
            <input asp-for="Category" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="SkillFirstObservation" class="col-lg-3 col-sm-3 control-label">First Observed</label>
        <div class="col-8 col-xs-7 col-sm-6 col-md-4">
            <div class="input-group date">
                <input id="datetimepicker1" data-format="dd-MMM-yyyy" type="text"
                       class="form-control" data-zdp_readonly_element="false" asp-for="SkillFirstObservation" />
            </div>
        </div>
    </div>
    <script type="text/javascript">
        $(function () {
            $('#datetimepicker1').Zebra_DatePicker({
                format: 'd-M-Y',
                open_icon_only: true
            });
        });
    </script>
    <div class="form-group">
        <label asp-for="AccessLevel" class="col-lg-3 col-sm-3 control-label">Access Level</label>
        <div class="col-lg-9">
            <select class="selectpicker form-control-noline" data-style="select-with-transition" data-size="@Model.AccessLevelListEn.Count" asp-for="AccessLevel" asp-items="@Model.AccessLevelListEn"></select>
        </div>
    </div>
    <div>
        <div class="form-group">
            <div class="col-lg-3 col-sm-3 control-label"></div>
            <div class="col-lg-9">
                <button class="btn btn-success leavePage" type="submit">Save</button>
                <a class="btn btn-danger leavePage" asp-controller="Skills" asp-action="Index">Cancel</a>
            </div>
        </div>
    </div>
</form>