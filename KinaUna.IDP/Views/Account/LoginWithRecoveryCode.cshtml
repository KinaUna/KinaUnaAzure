@using KinaUna.Data
@using KinaUna.IDP.Services
@model KinaUna.IDP.Models.AccountViewModels.LoginWithRecoveryCodeViewModel
@inject ILocaleManager LocaleManager
@{
    int languageId = LocaleManager.GetLanguageId(Context.Request);
    ViewData["Title"] = await LocaleManager.GetTranslation("Recovery code verification", PageNames.Account, languageId);
}
<h2>@ViewData["Title"]</h2>
<hr/>
<p>
    @await LocaleManager.GetTranslation("You have requested to login with a recovery code.", PageNames.Account, languageId)
    @await LocaleManager.GetTranslation("This login will not be remembered until you provide an authenticator app code at login or disable 2FA and login again.", PageNames.Account, languageId)
</p>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RecoveryCode">@await LocaleManager.GetTranslation("Recovery code", PageNames.Account, languageId)</label>
                <input asp-for="RecoveryCode" class="form-control" autocomplete="off"/>
                <span asp-validation-for="RecoveryCode" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">@await LocaleManager.GetTranslation("Log in", PageNames.Account, languageId)</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}