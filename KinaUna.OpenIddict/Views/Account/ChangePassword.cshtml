@using KinaUna.Data
@using KinaUna.OpenIddict.Services
@model KinaUna.OpenIddict.Models.AccountViewModels.ChangePasswordViewModel
@inject ILocaleManager LocaleManager
@{
    int languageId = LocaleManager.GetLanguageId(Context.Request);
    string pageTitle = await LocaleManager.GetTranslation("Change password", PageNames.Account, languageId);
}
<h2>@pageTitle</h2>
@await Html.PartialAsync("_StatusMessage", Model.StatusMessage)
<div class="row">
    <div class="col-md-6">
        <h2>@pageTitle</h2>
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OldPassword">@await LocaleManager.GetTranslation("Old password", PageNames.Account, languageId)</label>
                <input asp-for="OldPassword" class="form-control"/>
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPassword">@await LocaleManager.GetTranslation("New password", PageNames.Account, languageId)</label>
                <input asp-for="NewPassword" class="form-control"/>
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword">@await LocaleManager.GetTranslation("Confirm new password", PageNames.Account, languageId)</label>
                <input asp-for="ConfirmPassword" class="form-control"/>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <input asp-for="Language" value="en" hidden="hidden"/>
            <input asp-for="LanguageId" value="@languageId" hidden="hidden"/>
            <button type="submit" class="btn btn-default leavePage">@await LocaleManager.GetTranslation("Update password", PageNames.Account, languageId)</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
